<Window x:Class="BTL_Nhom6.Quan_Ly_Thiet_Bi.DeviceDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Thông tin thiết bị" Height="620" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Background="{StaticResource ContentBackgroundBrush}" AllowsTransparency="True"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Border CornerRadius="12" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" 
            Background="{StaticResource ContentBackgroundBrush}" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Direction="270"/>
        </Border.Effect>

        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Form Fields -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock x:Name="lblTitle" Text="THÊM THIẾT BỊ MỚI" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBlueBrush}" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- 2. FORM (Chia 2 cột) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="32"/>
                    <!-- Khoảng cách giữa 2 cột -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CỘT TRÁI: Thông tin định danh -->
                <StackPanel Grid.Column="0">
                    <!-- Mã thiết bị -->
                    <TextBox x:Name="txtDeviceCode" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Mã thiết bị (*)" 
                             Height="50" Margin="0,0,0,20" VerticalContentAlignment="Center"/>

                    <!-- Tên thiết bị -->
                    <TextBox x:Name="txtDeviceName" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Tên thiết bị (*)" 
                             Height="50" Margin="0,0,0,20" VerticalContentAlignment="Center"/>

                    <!-- Model (ComboBox) -->
                    <ComboBox x:Name="cbModel" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Model / Mẫu máy (*)"
                              Height="50" Margin="0,0,0,20"
                              DisplayMemberPath="ModelName" SelectedValuePath="ModelID"/>

                    <!-- Số Serial -->
                    <TextBox x:Name="txtSerialNumber" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Số Serial (S/N)" 
                             Height="50" Margin="0,0,0,20" VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- CỘT PHẢI: Thông tin quản lý -->
                <StackPanel Grid.Column="2">
                    <!-- Vị trí (ComboBox) -->
                    <ComboBox x:Name="cbLocation" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Vị trí đặt máy (*)"
                              Height="50" Margin="0,0,0,20"
                              DisplayMemberPath="LocationName" SelectedValuePath="LocationID"/>

                    <!-- Trạng thái (ComboBox) -->
                    <ComboBox x:Name="cbStatus" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Trạng thái hiện tại (*)"
                              Height="50" Margin="0,0,0,20"
                              DisplayMemberPath="StatusName" SelectedValuePath="StatusID"/>

                    <!-- Ngày mua (DatePicker) -->
                    <DatePicker x:Name="dpPurchaseDate" Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.Hint="Ngày mua"
                                Height="50" Margin="0,0,0,20"/>

                    <!-- Hạn bảo hành (DatePicker) -->
                    <DatePicker x:Name="dpWarrantyExpiry" Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.Hint="Hạn bảo hành"
                                Height="50" Margin="0,0,0,20"/>
                </StackPanel>
            </Grid>

            <!-- 3. ACTIONS BUTTONS -->
            <Grid Grid.Row="2" Margin="0,32,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Hủy bỏ" IsCancel="True" Click="BtnCancel_Click" 
                        Style="{StaticResource MaterialDesignOutlinedButton}" 
                        BorderBrush="{StaticResource BorderMediumBrush}" 
                        Foreground="{StaticResource TextSecondaryBrush}" Height="45"/>

                <Button Grid.Column="1" Grid.ColumnSpan="2" Content="LƯU DỮ LIỆU" Click="BtnSave_Click" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{StaticResource PrimaryBlueBrush}" 
                        BorderBrush="{StaticResource PrimaryBlueBrush}" 
                        Foreground="White" FontWeight="Bold" Height="45"/>
            </Grid>
        </Grid>
    </Border>
</Window>