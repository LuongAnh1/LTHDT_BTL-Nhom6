 <Window x:Class="BTL_Nhom6.Quan_Ly_Thiet_Bi.HSTB_va_QR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Hồ sơ thiết bị &amp; QR Code" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- Style cho các nút hành động -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="1,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTB"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Table Area -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thiết bị" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. TABS NAVIGATION (ĐỒNG CẤP) -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Hồ sơ thiết bị &amp; QR" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="0"/>
                    <Button Content="Tra cứu tài sản" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_TraCuu_Click"/>
                    <Button Content="Theo dõi bảo hành" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_BaoHanh_Click"/>
                    <Button Content="Điều chuyển &amp; Bàn giao" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_BanGiao_Click"/>
                </StackPanel>
            </Border>

            <!-- 3. TABLE CONTENT -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOOLBAR -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Laptop" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Danh sách hồ sơ thiết bị" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>

                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="20,0,0,0" Width="150" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Barcode" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchMa" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Mã thiết bị" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                            </Grid>
                        </Border>

                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="12,0,0,0" Width="200" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchTen" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Tên thiết bị" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Background="Gray" BorderThickness="0" Height="36" Padding="12,0" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Qrcode" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="In mã QR hàng loạt" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="36" Padding="12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Thêm thiết bị mới" Foreground="White" VerticalAlignment="Center" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- BẢNG DỮ LIỆU CẬP NHẬT -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" ClipToBounds="True">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Header Bảng (Chia lại tỉ lệ 9 cột) -->
                            <Border Background="#232E3E" Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <!-- Mã TB -->
                                        <ColumnDefinition Width="1.5*"/>
                                        <!-- Tên TB -->
                                        <ColumnDefinition Width="1*"/>
                                        <!-- Model -->
                                        <ColumnDefinition Width="1*"/>
                                        <!-- Số Seri -->
                                        <ColumnDefinition Width="1*"/>
                                        <!-- Vị trí -->
                                        <ColumnDefinition Width="1*"/>
                                        <!-- Trạng thái -->
                                        <ColumnDefinition Width="100"/>
                                        <!-- Ngày mua -->
                                        <ColumnDefinition Width="100"/>
                                        <!-- Hạn BH -->
                                        <ColumnDefinition Width="110"/>
                                        <!-- Hành động -->
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="MÃ TB" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="TÊN THIẾT BỊ" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="2" Text="MODEL" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="3" Text="SỐ SERI" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="4" Text="VỊ TRÍ" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="5" Text="TRẠNG THÁI" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="6" Text="NGÀY MUA" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="7" Text="HẠN BH" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="8" Text="HÀNH ĐỘNG" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Hàng dữ liệu mẫu 1 -->
                            <Border BorderBrush="{StaticResource AppBackgroundBrush}" BorderThickness="0,0,0,1" Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="110"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="TB001" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Laptop Dell Vostro 3400" FontWeight="Medium" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="2" Text="V3400-i5" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="SN-992023X" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Grid.Column="4" Text="Phòng Kế toán" VerticalAlignment="Center"/>

                                    <Border Grid.Column="5" Background="#E8F5E9" CornerRadius="12" Padding="8,2" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="Đang dùng" Foreground="#2E7D32" FontSize="11" FontWeight="SemiBold"/>
                                    </Border>

                                    <TextBlock Grid.Column="6" Text="15/10/2023" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="13"/>
                                    <TextBlock Grid.Column="7" Text="15/10/2025" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="13" Foreground="#D32F2F"/>

                                    <StackPanel Grid.Column="8" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource IconActionButton}" ToolTip="Xem QR">
                                            <materialDesign:PackIcon Kind="Qrcode" Foreground="{StaticResource HighlightBlueBrush}" Width="16" Height="16"/>
                                        </Button>
                                        <Button Style="{StaticResource IconActionButton}" ToolTip="Sửa">
                                            <materialDesign:PackIcon Kind="Pencil" Foreground="{StaticResource HighlightBlueBrush}" Width="16" Height="16"/>
                                        </Button>
                                        <Button Style="{StaticResource IconActionButton}" ToolTip="Xóa">
                                            <materialDesign:PackIcon Kind="Delete" Foreground="{StaticResource DeleteIconBrush}" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>