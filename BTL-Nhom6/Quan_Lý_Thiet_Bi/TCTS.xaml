<Window x:Class="BTL_Nhom6.Quan_Ly_Thiet_Bi.TCTS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Tra cứu Tài sản nâng cao" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTB"/>

        <!-- 2. MAIN CONTENT AREA -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thiết bị" 
               FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
               Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. TABS NAVIGATION -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Hồ sơ thiết bị &amp; QR" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="0" Click="Button_HSTB_Click"/>
                    <Button Content="Tra cứu tài sản" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="32,0,0,0"/>
                    <Button Content="Theo dõi bảo hành" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_BaoHanh_Click"/>
                    <Button Content="Điều chuyển &amp; Bàn giao" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_BanGiao_Click"/>
                </StackPanel>
            </Border>

            <!-- 3. MAIN CONTENT (FILTERS + TABLE) -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,0,32,32">

                    <!-- SECTION: TÌM KIẾM NÂNG CAO -->
                    <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Tìm kiếm nâng cao" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Mã/Tên -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Mã hoặc Tên thiết bị" Margin="0,0,0,8" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBox materialDesign:HintAssist.Hint="Nhập mã hoặc tên..." 
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Height="45" Padding="12,0" VerticalContentAlignment="Center"
                                             materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"/>
                                </StackPanel>

                                <!-- Phòng ban -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Phòng ban" Margin="0,0,0,8" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}" Height="45" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Tất cả phòng ban" IsSelected="True"/>
                                        <ComboBoxItem Content="Phòng Kế toán"/>
                                        <ComboBoxItem Content="Phòng Nhân sự"/>
                                        <ComboBoxItem Content="Phòng Kỹ thuật"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Người dùng -->
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Người dùng" Margin="0,0,0,8" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}" Height="45" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Tất cả người dùng" IsSelected="True"/>
                                        <ComboBoxItem Content="Nguyễn Văn A"/>
                                        <ComboBoxItem Content="Trần Thị B"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Trạng thái -->
                                <StackPanel Grid.Column="6">
                                    <TextBlock Text="Trạng thái" Margin="0,0,0,8" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}" Height="45" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Tất cả trạng thái" IsSelected="True"/>
                                        <ComboBoxItem Content="Đang sử dụng"/>
                                        <ComboBoxItem Content="Đang bảo trì"/>
                                        <ComboBoxItem Content="Trong kho"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Nút Áp dụng bộ lọc đã được tăng kích thước -->
                                <!-- Nút Áp dụng bộ lọc đã được sửa bo góc -->
                                <Button Grid.Row="1" Grid.Column="6" Margin="0,20,0,0" 
        Height="50"  
        Background="{StaticResource PrimaryBlueBrush}" 
        BorderThickness="0"
        materialDesign:ButtonAssist.CornerRadius="4" 
        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Search" 
             Foreground="White" 
             VerticalAlignment="Center" 
             Margin="0,0,10,0" 
             Width="24" 
             Height="24"/>

                                        <TextBlock Text="ÁP DỤNG BỘ LỌC" 
               Foreground="White" 
               VerticalAlignment="Center" 
               FontWeight="Bold" 
               FontSize="16"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- SECTION: KẾT QUẢ TÌM KIẾM -->
                    <Border Background="White" CornerRadius="8" Padding="24" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Kết quả tìm kiếm" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                            <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="6" ClipToBounds="True">
                                <StackPanel>
                                    <!-- Table Header -->
                                    <Border Background="#232E3E" Padding="15,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="1.8*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="MÃ THIẾT BỊ" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="TÊN THIẾT BỊ" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="2" Text="VỊ TRÍ" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="3" Text="NGƯỜI PHỤ TRÁCH" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="4" Text="TRẠNG THÁI" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="5" Text="HÀNH ĐỘNG" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>

                                    <!-- Dữ liệu mẫu 1 -->
                                    <Border BorderBrush="{StaticResource AppBackgroundBrush}" BorderThickness="0,0,0,1" Padding="15,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="1.8*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="LAP-001" VerticalAlignment="Center" FontWeight="Medium"/>
                                            <TextBlock Grid.Column="1" Text="Laptop Dell XPS 15" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="Phòng Kỹ thuật" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="Nguyễn Văn A" VerticalAlignment="Center"/>
                                            <Border Grid.Column="4" Background="#DCFCE7" CornerRadius="12" Padding="8,2" HorizontalAlignment="Center">
                                                <TextBlock Text="Đang sử dụng" Foreground="#166534" FontSize="11" FontWeight="SemiBold"/>
                                            </Border>
                                            <Button Grid.Column="5" Style="{StaticResource IconActionButton}">
                                                <materialDesign:PackIcon Kind="Eye" Foreground="{StaticResource HighlightBlueBrush}" Width="18" Height="18"/>
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <!-- Dữ liệu mẫu 2 (Đang bảo trì) -->
                                    <Border BorderBrush="{StaticResource AppBackgroundBrush}" BorderThickness="0,0,0,1" Padding="15,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="1.8*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="PRN-002" VerticalAlignment="Center" FontWeight="Medium"/>
                                            <TextBlock Grid.Column="1" Text="Máy in Canon 2900" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="Phòng Nhân sự" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="Lê Văn C" VerticalAlignment="Center"/>
                                            <Border Grid.Column="4" Background="#FEF9C3" CornerRadius="12" Padding="8,2" HorizontalAlignment="Center">
                                                <TextBlock Text="Đang bảo trì" Foreground="#854D0E" FontSize="11" FontWeight="SemiBold"/>
                                            </Border>
                                            <Button Grid.Column="5" Style="{StaticResource IconActionButton}">
                                                <materialDesign:PackIcon Kind="Eye" Foreground="{StaticResource HighlightBlueBrush}" Width="18" Height="18"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>