<Window x:Class="BTL_Nhom6.Quan_Ly_Thiet_Bi.TCTS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Tra cứu Tài sản nâng cao" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}"
        Loaded="Window_Loaded">
    <!-- Thêm sự kiện Loaded -->

    <Window.Resources>
        <!-- Style cho Button nhỏ trong Grid -->
        <Style x:Key="GridActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTB"/>

        <!-- 2. MAIN CONTENT AREA -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thiết bị" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- TABS -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Hồ sơ thiết bị &amp; QR" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="0" Click="Button_HSTB_Click"/>
                    <Button Content="Tra cứu tài sản" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="32,0,0,0"/>
                    <Button Content="Theo dõi bảo hành" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_BaoHanh_Click"/>
                    <Button Content="Điều chuyển &amp; Bàn giao" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_BanGiao_Click"/>
                </StackPanel>
            </Border>

            <!-- CONTENT -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Filter -->
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                </Grid.RowDefinitions>

                <!-- SECTION: FILTER -->
                <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24" 
                        BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Tìm kiếm nâng cao" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 1. Mã/Tên -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Mã hoặc Tên thiết bị" Margin="0,0,0,8" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBox x:Name="txtKeyword" 
                                         materialDesign:HintAssist.Hint="Nhập mã hoặc tên..." 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Height="45" Padding="12,0" 
                                         VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- 2. Phòng ban (ComboBox) -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Phòng ban" Margin="0,0,0,8" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <ComboBox x:Name="cbLocation"
                                          DisplayMemberPath="LocationName" 
                                          SelectedValuePath="LocationID"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                                          Height="45" VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- 3. Người dùng (TextBox - Tìm theo tên) -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Người đang giữ" Margin="0,0,0,8" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBox x:Name="txtUser"
                                         materialDesign:HintAssist.Hint="Nhập tên nhân viên..."
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                                         Height="45" Padding="12,0" VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- 4. Trạng thái (ComboBox) -->
                            <StackPanel Grid.Column="6">
                                <TextBlock Text="Trạng thái" Margin="0,0,0,8" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <ComboBox x:Name="cbStatus"
                                          DisplayMemberPath="StatusName" 
                                          SelectedValuePath="StatusID"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                                          Height="45" VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- BUTTON SEARCH -->
                            <Button x:Name="btnSearch" Grid.Row="1" Grid.Column="6" Margin="0,20,0,0" 
                                    Height="50" Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0"
                                    materialDesign:ButtonAssist.CornerRadius="4" Cursor="Hand"
                                    Click="btnSearch_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Search" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" Width="24" Height="24"/>
                                    <TextBlock Text="ÁP DỤNG BỘ LỌC" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- SECTION: DATAGRID -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="0" 
                        BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" ClipToBounds="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Kết quả tìm kiếm" FontSize="18" FontWeight="Bold" Margin="24,24,0,16"/>

                        <!-- DataGrid -->
                        <DataGrid x:Name="dgDevices" Grid.Row="1" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  Background="White"
                                  BorderThickness="0"
                                  HorizontalGridLinesBrush="#F0F0F0"
                                  VerticalGridLinesBrush="Transparent"
                                  RowHeight="50"
                                  Padding="10">

                            <!-- Style cho Header -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#232E3E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="10,12"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!-- Style cho Cell -->
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        Background="{TemplateBinding Background}" 
                                                        SnapsToDevicePixels="True">
                                                    <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <!-- Mã TB -->
                                <DataGridTextColumn Header="MÃ THIẾT BỊ" Binding="{Binding DeviceCode}" Width="120" FontWeight="Bold"/>

                                <!-- Tên TB -->
                                <DataGridTextColumn Header="TÊN THIẾT BỊ" Binding="{Binding DeviceName}" Width="2*"/>

                                <!-- Vị trí -->
                                <DataGridTextColumn Header="VỊ TRÍ" Binding="{Binding LocationName}" Width="1.5*"/>

                                <!-- Người phụ trách (Cột quan trọng) -->
                                <DataGridTextColumn Header="NGƯỜI ĐANG GIỮ" Binding="{Binding CurrentUserFullName}" Width="1.5*"/>

                                <!-- Trạng thái (Custom Template để có màu) -->
                                <DataGridTemplateColumn Header="TRẠNG THÁI" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="#F3F4F6" CornerRadius="12" Padding="10,4" HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding StatusName}" Foreground="#4B5563" FontWeight="SemiBold" FontSize="12"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Hành động -->
                                <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Style="{StaticResource GridActionButton}" ToolTip="Xem chi tiết" Click="btnViewDetail_Click">
                                                    <materialDesign:PackIcon Kind="Eye" Foreground="{StaticResource HighlightBlueBrush}"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>