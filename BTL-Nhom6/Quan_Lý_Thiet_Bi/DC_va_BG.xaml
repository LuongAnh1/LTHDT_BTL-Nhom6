 <Window x:Class="BTL_Nhom6.Quan_Ly_Thiet_Bi.DC_va_BG"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Điều chuyển &amp; Bàn giao" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTB"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Scrollable Content -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thiết bị" 
               FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
               Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. TABS NAVIGATION -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Hồ sơ thiết bị &amp; QR" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="0" Click="Button_HSTB_Click"/>
                    <Button Content="Tra cứu tài sản" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_TraCuu_Click"/>
                    <Button Content="Theo dõi bảo hành" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_BaoHanh_Click"/>
                    <Button Content="Điều chuyển &amp; Bàn giao" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="32,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- 3. MAIN CONTENT (SCROLLABLE) -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,0,32,32">

                    <!-- SECTION: TẠO PHIẾU ĐIỀU CHUYỂN (ĐÃ SỬA LỖI HIỂN THỊ CHỮ) -->                   
                    <Border Background="White" CornerRadius="8" Padding="24" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Tạo phiếu điều chuyển" FontSize="18" FontWeight="Bold" Margin="0,0,0,16" Foreground="{StaticResource TextPrimaryBrush}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 1. CHỌN THIẾT BỊ -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,20">
                                    <TextBlock Text="Chọn thiết bị" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                                    <Border Background="#F8F9FA" CornerRadius="6" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Height="45">
                                        <Grid>
                                            <materialDesign:PackIcon Kind="Search" Foreground="Gray" VerticalAlignment="Center" Margin="12,0,0,0" Width="18" Height="18"/>
                                            <TextBox BorderThickness="0" Padding="0" Margin="38,0,10,0" 
                                 VerticalAlignment="Center" VerticalContentAlignment="Center"
                                 FontSize="14" Background="Transparent"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                 materialDesign:HintAssist.Hint="Tìm kiếm theo mã, tên thiết bị..."
                                 materialDesign:HintAssist.IsFloating="False"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- 2. VỊ TRÍ HIỆN TẠI -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,20">
                                    <TextBlock Text="Phòng ban/Vị trí hiện tại" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                                    <Border Background="#F1F3F5" CornerRadius="6" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Height="45">
                                        <TextBox Text="Phòng Kỹ thuật - Tầng 2" IsEnabled="False" BorderThickness="0" Padding="12,0"
                             VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="14"
                             materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"/>
                                    </Border>
                                </StackPanel>

                                <!-- 3. VỊ TRÍ MỚI -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,20">
                                    <TextBlock Text="Phòng ban/Vị trí mới" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}" Height="45" 
                          Padding="12,0" VerticalContentAlignment="Center"
                          materialDesign:HintAssist.Hint="Chọn phòng ban/vị trí mới"
                          materialDesign:TextFieldAssist.DecorationVisibility="Collapsed">
                                        <ComboBoxItem Content="Phòng Nhân sự - Tầng 3"/>
                                        <ComboBoxItem Content="Phòng Marketing - Tầng 4"/>
                                        <ComboBoxItem Content="Ban Giám đốc - Tầng 5"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 4. NGÀY ĐIỀU CHUYỂN -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,20">
                                    <TextBlock Text="Ngày điều chuyển/bàn giao" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                                    <DatePicker Style="{StaticResource MaterialDesignOutlinedDatePicker}" Height="45" 
                            Padding="12,0" VerticalContentAlignment="Center"
                            materialDesign:HintAssist.Hint="Chọn ngày điều chuyển"
                            materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"/>
                                </StackPanel>

                                <!-- 5. NGƯỜI BÀN GIAO -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,20">
                                    <TextBlock Text="Người bàn giao" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}" Height="45" 
                          Padding="12,0" VerticalContentAlignment="Center"
                          materialDesign:HintAssist.Hint="Chọn nhân viên bàn giao"
                          materialDesign:TextFieldAssist.DecorationVisibility="Collapsed">
                                        <ComboBoxItem Content="Nguyễn Văn A"/>
                                        <ComboBoxItem Content="Trần Thị B"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 6. NGƯỜI NHẬN BÀN GIAO -->
                                <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,20">
                                    <TextBlock Text="Người nhận bàn giao" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}" Height="45" 
                          Padding="12,0" VerticalContentAlignment="Center"
                          materialDesign:HintAssist.Hint="Chọn nhân viên nhận"
                          materialDesign:TextFieldAssist.DecorationVisibility="Collapsed">
                                        <ComboBoxItem Content="Lê Văn C"/>
                                        <ComboBoxItem Content="Phạm Thị D"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 7. GHI CHÚ -->
                                <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Margin="0,0,0,24">
                                    <TextBlock Text="Ghi chú" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}" Height="90" 
                         AcceptsReturn="True" TextWrapping="Wrap" VerticalContentAlignment="Top" 
                         Padding="12,10" materialDesign:HintAssist.Hint="Nhập ghi chú (nếu có)..."
                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"/>
                                </StackPanel>

                                <!-- BUTTON XÁC NHẬN (ĐÃ GIẢM ĐỘ BO GÓC) -->
                                <Button Grid.Row="4" Grid.Column="2" 
        HorizontalAlignment="Right" 
        Background="{StaticResource PrimaryBlueBrush}" 
        BorderThickness="0" 
        Height="45" 
        Width="Auto" 
        Padding="20,0" 
        materialDesign:ButtonAssist.CornerRadius="4" 
        Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSaveCheck" 
                                 Foreground="White" 
                                 Width="20" 
                                 Height="20" 
                                 Margin="0,0,10,0" 
                                 VerticalAlignment="Center"/>

                                        <TextBlock Text="XÁC NHẬN ĐIỀU CHUYỂN" 
                   Foreground="White" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold" 
                   FontSize="13"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- SECTION: LỊCH SỬ ĐIỀU CHUYỂN -->
                    <Border Background="White" CornerRadius="8" Padding="24" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Margin="0,24,0,0">
                        <StackPanel>
                            <TextBlock Text="Lịch sử điều chuyển" FontSize="18" FontWeight="Bold" Margin="0,0,0,16" Foreground="{StaticResource TextPrimaryBrush}"/>

                            <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="6" ClipToBounds="True">
                                <StackPanel>
                                    <!-- Table Header -->
                                    <Border Background="#232E3E" Padding="15,14">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <!-- Mã TB -->
                                                <ColumnDefinition Width="2*"/>
                                                <!-- Tên TB (Tăng chiều rộng) -->
                                                <ColumnDefinition Width="1.5*"/>
                                                <!-- Từ -->
                                                <ColumnDefinition Width="1.5*"/>
                                                <!-- Đến -->
                                                <ColumnDefinition Width="110"/>
                                                <!-- Ngày (Cố định rộng hơn chút) -->
                                                <ColumnDefinition Width="1.2*"/>
                                                <!-- Người BG -->
                                                <ColumnDefinition Width="1.2*"/>
                                                <!-- Người Nhận -->
                                            </Grid.ColumnDefinitions>
                                            <!-- Thêm MarginRight cho các tiêu đề để không dính cột -->
                                            <TextBlock Grid.Column="0" Text="MÃ TB" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="1" Text="TÊN THIẾT BỊ" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="2" Text="TỪ (CŨ)" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="3" Text="ĐẾN (MỚI)" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="4" Text="NGÀY" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="5" Text="NGƯỜI BG" Foreground="White" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="6" Text="NGƯỜI NHẬN" Foreground="White" FontWeight="SemiBold"/>
                                        </Grid>
                                    </Border>

                                    <!-- Row 1 -->
                                    <!-- Thêm BorderThickness dưới đáy để tạo dòng kẻ phân cách -->
                                    <Border Background="White" Padding="15,14" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="110"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Thêm Margin cho TextBlock để tách biệt nội dung -->
                                            <TextBlock Grid.Column="0" Text="TB-00123" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="1" Text="Laptop Dell XPS 15" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="2" Text="Phòng IT" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="3" Text="Phòng Kỹ thuật" VerticalAlignment="Center" Foreground="{StaticResource HighlightBlueBrush}" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="4" Text="20/07/2023" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="5" Text="Nguyễn Văn A" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="6" Text="Trần Thị B" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>

                                    <!-- Row 2 -->
                                    <Border Background="White" Padding="15,14">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="110"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="TB-00456" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="1" Text="Màn hình LG 27&quot;" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="2" Text="Phòng Marketing" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="3" Text="Phòng Design" VerticalAlignment="Center" Foreground="{StaticResource HighlightBlueBrush}" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="4" Text="15/07/2023" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="5" Text="Lê Văn C" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="6" Text="Phạm Thị D" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>                                                
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>