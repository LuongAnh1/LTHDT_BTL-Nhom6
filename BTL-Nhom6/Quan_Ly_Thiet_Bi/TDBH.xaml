<Window x:Class="BTL_Nhom6.Quan_Ly_Thiet_Bi.TDBH"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        xmlns:local="clr-namespace:BTL_Nhom6.Quan_Ly_Thiet_Bi"
        mc:Ignorable="d"
        Title="Theo dõi bảo hành" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <SolidColorBrush x:Key="HtmlBlue" Color="#3b82f6"/>
        <SolidColorBrush x:Key="HtmlGreen" Color="#22c55e"/>
        <SolidColorBrush x:Key="HtmlRed" Color="#ef4444"/>
        <SolidColorBrush x:Key="HtmlYellow" Color="#f59e0b"/>

        <!-- Converter màu sắc ngày tháng -->
        <local:DateToColorConverter x:Key="DateColorConverter"/>

        <Style x:Key="CustomDataGridHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#232E3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTB"/>

        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thiết bị" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- TABS -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Hồ sơ thiết bị &amp; QR" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="0" Click="Button_HSTB_Click"/>
                    <Button Content="Tra cứu tài sản" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_TraCuu_Click"/>
                    <Button Content="Theo dõi bảo hành" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="32,0,0,0"/>
                    <Button Content="Điều chuyển &amp; Bàn giao" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_DieuChuyen_Click"/>
                </StackPanel>
            </Border>

            <!-- MAIN CONTENT -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,0,32,32">

                    <!-- SECTION 1: BỘ LỌC -->
                    <Border Background="White" CornerRadius="8" Padding="24" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Margin="0,0,0,24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Date Pickers (Đã sửa) -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Phạm vi ngày hết hạn" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- THÊM: VerticalContentAlignment="Center" và Padding -->
                                    <DatePicker x:Name="dpTuNgay" Grid.Column="0" 
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" 
                            Height="42" 
                            Padding="10,0"
                            VerticalContentAlignment="Center"
                            materialDesign:TextFieldAssist.DecorationVisibility="Collapsed" 
                            materialDesign:HintAssist.Hint="Từ ngày"/>

                                    <TextBlock Grid.Column="1" Text="-" VerticalAlignment="Center" Margin="10,0" Foreground="Gray"/>

                                    <!-- THÊM: VerticalContentAlignment="Center" và Padding -->
                                    <DatePicker x:Name="dpDenNgay" Grid.Column="2" 
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" 
                            Height="42" 
                            Padding="10,0"
                            VerticalContentAlignment="Center"
                            materialDesign:TextFieldAssist.DecorationVisibility="Collapsed" 
                            materialDesign:HintAssist.Hint="Đến ngày"/>
                                </Grid>
                            </StackPanel>

                            <!-- Combo Box Nhà Cung Cấp (Đã sửa) -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Nhà cung cấp" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,8"/>

                                <!-- THÊM: VerticalContentAlignment="Center" và Padding -->
                                <ComboBox x:Name="cbbNhaCungCap" 
                      Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                      Height="42" 
                      Padding="10,0"
                      VerticalContentAlignment="Center"
                      materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                      DisplayMemberPath="SupplierName"
                      SelectedValuePath="SupplierID">
                                </ComboBox>
                            </StackPanel>

                            <!-- Buttons (Giữ nguyên) -->
                            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                                <Button Background="{StaticResource HtmlBlue}" BorderThickness="0" Height="42" Margin="0,0,10,0" materialDesign:ButtonAssist.CornerRadius="4" Click="Button_Loc_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Foreground="White" Kind="FilterVariant" Width="18" Height="18" Margin="0,0,8,0"/>
                                        <TextBlock Foreground="White" Text="Lọc" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="#E5E7EB" Foreground="{StaticResource TextPrimaryBrush}" BorderThickness="0" Height="42" materialDesign:ButtonAssist.CornerRadius="4" Click="Button_XoaLoc_Click">
                                    <TextBlock Text="Xóa bộ lọc" FontWeight="SemiBold"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- SECTION 2: DATAGRID -->
                    <Border Background="White" CornerRadius="8" Padding="24" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                        <StackPanel>
                            <!-- Header & Action -->
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="Danh sách thiết bị sắp hết hạn bảo hành" FontSize="18" FontWeight="Bold" 
                                           VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>

                                <Button HorizontalAlignment="Right" Background="{StaticResource HtmlGreen}" BorderThickness="0" Height="40" materialDesign:ButtonAssist.CornerRadius="4" Click="Button_XuatBaoCao_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Foreground="White" Kind="FileDownloadOutline" Width="18" Height="18" Margin="0,0,8,0"/>
                                        <TextBlock Foreground="White" Text="Xuất báo cáo" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- DATAGRID CHÍNH THỨC -->
                            <DataGrid x:Name="dgDanhSachBaoHanh"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                                      BorderThickness="1"
                                      BorderBrush="{StaticResource BorderLightBrush}"
                                      Background="White"
                                      ColumnHeaderStyle="{StaticResource CustomDataGridHeader}">

                                <DataGrid.Resources>
                                    <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                        <Setter Property="Padding" Value="10,14"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Block.TextAlignment" Value="Left"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <!-- 1. Mã TB -->
                                    <DataGridTextColumn Header="Mã thiết bị" Binding="{Binding DeviceCode}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Consolas"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- 2. Tên thiết bị -->
                                    <DataGridTemplateColumn Header="Thiết bị" Width="2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DeviceName}" TextWrapping="Wrap" FontWeight="Medium"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 3. Nhà cung cấp -->
                                    <DataGridTextColumn Header="Nhà cung cấp" Binding="{Binding SupplierName}" Width="1.5*"/>

                                    <!-- 4. Vị trí thiết bị (Thay vì địa chỉ NCC do Model chưa có) -->
                                    <DataGridTemplateColumn Header="Vị trí hiện tại" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding LocationName}" TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 5. Liên hệ (SĐT + Người liên hệ) -->
                                    <DataGridTemplateColumn Header="Liên hệ NCC" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding SupplierContactPerson}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding SupplierPhone}" FontSize="12" Foreground="Gray"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 6. Ngày hết hạn -->
                                    <DataGridTextColumn Header="Ngày hết hạn" Binding="{Binding WarrantyExpiry, StringFormat='dd/MM/yyyy'}" Width="150">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="{Binding WarrantyExpiry, Converter={StaticResource DateColorConverter}}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>