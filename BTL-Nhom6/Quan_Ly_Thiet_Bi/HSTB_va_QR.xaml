 <Window x:Class="BTL_Nhom6.Quan_Ly_Thiet_Bi.HSTB_va_QR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Quản lý vị trí phòng ban" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- Style Header của Bảng -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        <!-- Style cho các nút hành động -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="1,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTB"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Table Area -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thiết bị" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. TABS NAVIGATION -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <!-- Tab này luôn hiện -->
                    <Button Content="Hồ sơ thiết bị &amp; QR" 
                Style="{StaticResource ActiveTabButtonStyle}" 
                Padding="0,8" Margin="0"/>

                    <!-- Tab Tra cứu (Cần ẩn) -->
                    <Button x:Name="btnTabTraCuu"
                Content="Tra cứu tài sản" 
                Style="{StaticResource TabButtonStyle}" 
                Padding="0,8" Margin="32,0,0,0" 
                Click="Button_TraCuu_Click"/>

                    <!-- Tab Bảo hành (Cần ẩn) -->
                    <Button x:Name="btnTabBaoHanh"
                Content="Theo dõi bảo hành" 
                Style="{StaticResource TabButtonStyle}" 
                Padding="0,8" Margin="32,0,0,0" 
                Click="Button_BaoHanh_Click"/>

                    <!-- Tab Bàn giao (Cần ẩn) -->
                    <Button x:Name="btnTabBanGiao"
                Content="Điều chuyển &amp; Bàn giao" 
                Style="{StaticResource TabButtonStyle}" 
                Padding="0,8" Margin="32,0,0,0" 
                Click="Button_BanGiao_Click"/>
                </StackPanel>
            </Border>

            <!-- 3. TABLE CONTENT -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOOLBAR -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Laptop" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Danh sách hồ sơ thiết bị" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>

                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="20,0,0,0" Width="150" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Barcode" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchMa" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Mã thiết bị" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                            </Grid>
                        </Border>

                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="12,0,0,0" Width="200" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchTen" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Tên thiết bị" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Background="Gray" BorderThickness="0" Height="36" Padding="12,0" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Qrcode" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="In mã QR hàng loạt" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnAddDevice" Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="36" Padding="12,0" Click="BtnAdd_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Thêm thiết bị mới" Foreground="White" VerticalAlignment="Center" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- BẢNG DỮ LIỆU DÙNG DATAGRID -->
                <DataGrid x:Name="dgDevices" Grid.Row="1"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                              Background="White"
                              BorderThickness="1"
                              BorderBrush="{StaticResource BorderLightBrush}"
                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                              RowHeight="55"
                              FontSize="14"
                              VerticalScrollBarVisibility="Auto">

                    <!-- Style cho ô dữ liệu (Căn giữa theo chiều dọc) -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <!-- 1. Mã TB -->
                        <DataGridTextColumn Header="MÃ TB" Binding="{Binding DeviceCode}" Width="90" FontWeight="Bold"/>

                        <!-- 2. Tên TB -->
                        <DataGridTextColumn Header="TÊN THIẾT BỊ" Binding="{Binding DeviceName}" Width="1.5*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 3. Model -->
                        <DataGridTextColumn Header="MODEL" Binding="{Binding ModelName}" Width="1*"/>

                        <!-- 4. Số Seri -->
                        <DataGridTextColumn Header="SỐ SERI" Binding="{Binding SerialNumber}" Width="1*" Foreground="Gray"/>

                        <!-- 5. Vị trí -->
                        <DataGridTextColumn Header="VỊ TRÍ" Binding="{Binding LocationName}" Width="1*"/>

                        <!-- 6. Trạng thái (Custom hiển thị nền xanh/đỏ) -->
                        <DataGridTemplateColumn Header="TRẠNG THÁI" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#E8F5E9" CornerRadius="12" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StatusName}" Foreground="#2E7D32" FontSize="12" FontWeight="SemiBold"/>
                                    </Border>
                                    <!-- Lưu ý: Nếu muốn đổi màu theo trạng thái (Hỏng/Mất) thì cần dùng Converter hoặc Trigger trong Backend -->
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- 7. Ngày mua -->
                        <DataGridTextColumn Header="NGÀY MUA" Binding="{Binding PurchaseDate, StringFormat='dd/MM/yyyy'}" Width="100"/>

                        <!-- 8. Hạn BH -->
                        <DataGridTextColumn Header="HẠN BH" Binding="{Binding WarrantyExpiry, StringFormat='dd/MM/yyyy'}" Width="100" Foreground="#D32F2F"/>

                        <!-- 9. Hành động -->
                        <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- QR Code -->
                                        <Button Style="{StaticResource IconActionButton}" ToolTip="Xem &amp; In QR" 
                                Click="BtnPrintQR_Click" Tag="{Binding DeviceCode}">
                                            <materialDesign:PackIcon Kind="Qrcode" Foreground="{StaticResource HighlightBlueBrush}" Width="16" Height="16"/>
                                        </Button>
                                        <!-- Sửa -->
                                        <Button Visibility="{Binding ActionVisibility}" Style="{StaticResource IconActionButton}" ToolTip="Sửa" 
                                Click="BtnEdit_Click" Tag="{Binding DeviceCode}">
                                            <materialDesign:PackIcon Kind="Pencil" Foreground="{StaticResource HighlightBlueBrush}" Width="16" Height="16"/>
                                        </Button>
                                        <!-- Xóa -->
                                        <Button Visibility="{Binding ActionVisibility}" Style="{StaticResource IconActionButton}" ToolTip="Xóa" 
                                Click="BtnDelete_Click" Tag="{Binding DeviceCode}">
                                            <materialDesign:PackIcon Kind="Delete" Foreground="{StaticResource DeleteIconBrush}" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>