<Window x:Class="BTL_Nhom6.Trang_Chu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        
        mc:Ignorable="d"
        Title="Trang Chủ - Quản lý bảo trì" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- Cột Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Cột Nội dung chính -->
        </Grid.ColumnDefinitions>

        <!-- === PHẦN 1: SIDEBAR (THANH MENU TRÁI) === -->
        <!-- SỬ DỤNG USER CONTROL -->
        <!-- Set CurrentItem="System" để nút có Tag="System" sáng lên -->
        <uc:SidebarMenu Grid.Column="0" 
                        CurrentItem="Home"/>
        <!-- === PHẦN 2: MAIN CONTENT (BÊN PHẢI) === -->
        <Grid Grid.Column="1" Background="{StaticResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top Bar (Title & Window Controls) -->
                <RowDefinition Height="*"/>
                <!-- Content Area -->
            </Grid.RowDefinitions>

            <!-- 2.1 Top Bar & Window Controls -->
            <Grid Grid.Row="0">
                <!-- Tiêu đề trang -->
                <TextBlock Text="Trang chủ" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="30,20,0,10"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                <!-- Cụm nút điều khiển -->
                <!-- Sử dụng UserControl tái sử dụng -->
                <uc:WindowControlBar />
            </Grid>

            <!-- 2.2 Content Area (Placeholder) -->
            <Grid Grid.Row="1" Margin="30,0,30,30">
                <!-- Dùng Rectangle để tạo viền nét đứt -->
                <Rectangle Stroke="{StaticResource BorderMediumBrush}" 
                           StrokeThickness="2" 
                           RadiusX="10" RadiusY="10" 
                           StrokeDashArray="4 2" 
                           Fill="{StaticResource ContentBackgroundBrush}"/>

                <!-- Nội dung bên trong -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5">
                    <materialDesign:PackIcon Kind="ChartBoxOutline" Width="60" Height="60" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Khu vực hiển thị Dashboard" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>