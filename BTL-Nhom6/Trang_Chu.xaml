<Window x:Class="BTL_Nhom6.Trang_Chu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        
        mc:Ignorable="d"
        Title="Trang Chủ - Quản lý bảo trì" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- Style cho Button Menu bên trái -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Margin="0,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource MenuHoverBrush}"/>
                                <!-- Màu khi di chuột -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Item đang được chọn (Active) -->
        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
            <!-- Màu xanh active -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource MenuActiveHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- Cột Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Cột Nội dung chính -->
        </Grid.ColumnDefinitions>

        <!-- === PHẦN 1: SIDEBAR (THANH MENU TRÁI) === -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Logo/Header -->
                    <RowDefinition Height="*"/>
                    <!-- Danh sách Menu -->
                    <RowDefinition Height="Auto"/>
                    <!-- User/Logout -->
                </Grid.RowDefinitions>

                <!-- 1.1 Header Admin -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,30,20,30">
                    <materialDesign:PackIcon Kind="Cog" Width="30" Height="30" Foreground="{StaticResource TextWhiteBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="Admin" Foreground="{StaticResource TextWhiteBrush}" FontSize="20" FontWeight="Bold" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="{StaticResource SeparatorBrush}" Margin="20,0"/>

                <!-- 1.2 Menu Items -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,20,10,0">
                    <StackPanel>
                        <!-- Trang chủ (Active) -->
                        <Button Style="{StaticResource ActiveMenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Trang chủ" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Quản lý người dùng -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="Button_QTHT_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountMultiple" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản trị hệ thống" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Phân quyền -->
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Security" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý thông tin danh mục"  Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Quản lý thiết bị -->
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Devices" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý thiết bị" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Quy trình bảo trì -->
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarClock" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý quy trình bảo trì" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Quản lý kho -->
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PackageVariant" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý kho" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Báo cáo thống kê -->
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBar" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Báo cáo &amp; Thống kê" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- 1.3 Footer User & Logout -->
                <StackPanel Grid.Row="2" Margin="10,0,10,20">
                    <Separator Background="{StaticResource SeparatorBrush}" Margin="10,10,10,15"/>

                    <!-- User Info -->
                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountCircle" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="admin" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Đăng xuất -->
                    <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Logout_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Logout" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Đăng xuất" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- === PHẦN 2: MAIN CONTENT (BÊN PHẢI) === -->
        <Grid Grid.Column="1" Background="{StaticResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top Bar (Title & Window Controls) -->
                <RowDefinition Height="*"/>
                <!-- Content Area -->
            </Grid.RowDefinitions>

            <!-- 2.1 Top Bar & Window Controls -->
            <Grid Grid.Row="0">
                <!-- Tiêu đề trang -->
                <TextBlock Text="Trang chủ" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="30,20,0,10"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                <!-- Cụm nút điều khiển -->
                <!-- Sử dụng UserControl tái sử dụng -->
                <uc:WindowControlBar />
            </Grid>

            <!-- 2.2 Content Area (Placeholder) -->
            <Grid Grid.Row="1" Margin="30,0,30,30">
                <!-- Dùng Rectangle để tạo viền nét đứt -->
                <Rectangle Stroke="{StaticResource BorderMediumBrush}" 
                           StrokeThickness="2" 
                           RadiusX="10" RadiusY="10" 
                           StrokeDashArray="4 2" 
                           Fill="{StaticResource ContentBackgroundBrush}"/>

                <!-- Nội dung bên trong -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5">
                    <materialDesign:PackIcon Kind="ChartBoxOutline" Width="60" Height="60" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Khu vực hiển thị Dashboard" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>