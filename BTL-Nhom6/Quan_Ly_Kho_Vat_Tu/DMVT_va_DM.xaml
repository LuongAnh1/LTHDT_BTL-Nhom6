<Window x:Class="BTL_Nhom6.Quan_Ly_Kho_Vat_Tu.DMVT_va_DM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Quản lý kho - Danh mục vật tư" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- 1. Style Nút hành động nhỏ (Đồng bộ với QLVTPB) -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>

        <!-- 2. Style Header của Bảng (Đồng bộ) -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLKVT"/>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý kho &amp; Vật tư" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. TABS -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,10,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Danh mục vật tư &amp; Định mức" 
                            Style="{StaticResource ActiveTabButtonStyle}" 
                            Padding="0,8" Margin="0" 
                            Click="Button_DanhMuc_Click"/>

                    <Button x:Name="btnTabNhapKho"
                            Content="Nhập kho" 
                            Style="{StaticResource TabButtonStyle}" 
                            Padding="0,8" Margin="32,0,0,0" 
                            Click="Button_NhapKho_Click"/>

                    <Button Content="Xuất kho" 
                            Style="{StaticResource TabButtonStyle}" 
                            Padding="0,8" Margin="32,0,0,0" 
                            Click="Button_XuatKho_Click"/>

                    <!-- ACTIVE: Thẻ kho -->
                    <Button Content="Thẻ kho" 
                            Style="{StaticResource TabButtonStyle}" 
                            Padding="0,8" Margin="32,0,0,0" 
                            Click="Button_TheKho_Click"/>
                </StackPanel>
            </Border>

            <!-- 3. TABLE AREA -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOOLBAR (Style mới giống QLVTPB) -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Icon & Title -->
                        <materialDesign:PackIcon Kind="PackageVariantClosed" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Danh mục vật tư" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>

                        <!-- Search Mã -->
                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="20,0,0,0" Width="160" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Barcode" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchMa"
                                         BorderThickness="0"
                                         Padding="32,6,10,6"
                                         VerticalAlignment="Center"
                                         materialDesign:HintAssist.Hint="Mã vật tư"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         FontSize="13"
                                         KeyDown="Search_KeyDown"/>
                            </Grid>
                        </Border>

                        <!-- Search Tên -->
                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="12,0,0,0" Width="250" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchTen"
                                         BorderThickness="0"
                                         Padding="32,6,10,6"
                                         VerticalAlignment="Center"
                                         materialDesign:HintAssist.Hint="Tên vật tư"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         FontSize="13"
                                         KeyDown="Search_KeyDown"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Add Button -->
                    <Button x:Name="Button_ThemMoi"
                            Click="Button_ThemMoi_Click" HorizontalAlignment="Right" 
                            Background="{StaticResource PrimaryBlueBrush}" 
                            BorderThickness="0" Height="36" Padding="16,0"
                            materialDesign:ButtonAssist.CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Thêm vật tư" Foreground="White" VerticalAlignment="Center" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- DATA GRID (Style mới giống QLVTPB) -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" 
                        BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" 
                        ClipToBounds="True">

                    <DataGrid x:Name="dgVatTu"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserResizeColumns="True"
                              SelectionMode="Single"
                              IsReadOnly="True"
                              
                              Background="White"
                              BorderThickness="1"
                              BorderBrush="{StaticResource BorderLightBrush}"
                              
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                              
                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                              RowHeight="55"
                              FontSize="14"
                              VerticalScrollBarVisibility="Auto">

                        <!-- 1. STYLE CHO CELL (Để căn giữa nội dung & hiệu ứng chọn dòng) -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" 
                                                    Background="{TemplateBinding Background}" 
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- Cột 1: Mã -->
                            <DataGridTextColumn Header="MÃ" 
                                                Binding="{Binding MaDM}" 
                                                Width="100"
                                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- Cột 2: Tên (Quan trọng -> Width *) -->
                            <DataGridTextColumn Header="TÊN VẬT TƯ" 
                                                Binding="{Binding TenDM}" 
                                                Width="1.5*"
                                                FontWeight="Medium"
                                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- Cột 3: Mô tả -->
                            <DataGridTextColumn Header="MÔ TẢ" 
                                                Binding="{Binding MoTa}" 
                                                Width="2*"
                                                Foreground="{StaticResource TextSecondaryBrush}"
                                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- Cột 4: Định mức (Căn giữa Header và Cell) -->
                            <DataGridTextColumn Header="ĐỊNH MỨC" Binding="{Binding DinhMuc}" Width="120" FontWeight="Bold">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Cột 5: Đơn vị -->
                            <DataGridTextColumn Header="ĐƠN VỊ" 
                                                Binding="{Binding DonVi}" 
                                                Width="120"
                                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- Cột 6: Hành động -->
                            <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="Auto">
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,16,0">
                                            <!-- Nút Sửa -->
                                            <Button Style="{StaticResource IconActionButton}" 
                                                    ToolTip="Chỉnh sửa"
                                                    Tag="{Binding}" Click="Button_Edit_Click">
                                                <materialDesign:PackIcon Kind="Pencil" Foreground="{StaticResource HighlightBlueBrush}" Width="16" Height="16"/>
                                            </Button>

                                            <Border Width="8"/>

                                            <!-- Nút Xóa -->
                                            <Button Style="{StaticResource IconActionButton}" 
                                                    ToolTip="Xóa"
                                                    Click="Button_Delete_Click"
                                                    Tag="{Binding}">
                                                <materialDesign:PackIcon Kind="Delete" Foreground="{StaticResource DeleteIconBrush}" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>