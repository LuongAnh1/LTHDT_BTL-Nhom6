<UserControl x:Class="BTL_Nhom6.UserControls.SidebarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:BTL_Nhom6.UserControls"
             x:Name="ucSidebar">

    <Border Background="{StaticResource SidebarBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,30,20,30">
                <materialDesign:PackIcon Kind="CogOutline" Width="30" Height="30" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="Admin" Foreground="White" FontSize="20" FontWeight="Bold" Margin="15,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="{StaticResource SeparatorBrush}" Margin="20,0"/>

            <!-- 2. MENU ITEMS (Đã rút gọn) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,20,10,0">
                <StackPanel>

                    <!-- Cấu trúc mới áp dụng cho tất cả các nút -->
                    <!-- Chúng ta bind CurrentActiveTag vào CurrentItem của Sidebar cha -->

                    <local:SidebarItem Title="Trang chủ" 
                                       Icon="Home" 
                                       NavTag="Home"
                                       CurrentActiveTag="{Binding ElementName=ucSidebar, Path=CurrentItem}"
                                       Click="Button_Menu_Click"/>

                    <local:SidebarItem Title="Quản trị hệ thống" 
                                       Icon="AccountMultiple" 
                                       NavTag="QTHT"
                                       CurrentActiveTag="{Binding ElementName=ucSidebar, Path=CurrentItem}"
                                       Click="Button_Menu_Click"/>

                    <local:SidebarItem Title="Quản lý thông tin danh mục" 
                                       Icon="Category" 
                                       NavTag="QLTTDM"
                                       CurrentActiveTag="{Binding ElementName=ucSidebar, Path=CurrentItem}"
                                       Click="Button_Menu_Click"/>

                    <local:SidebarItem Title="Quản lý thiết bị" 
                                       Icon="Devices" 
                                       NavTag="QLTB"
                                       CurrentActiveTag="{Binding ElementName=ucSidebar, Path=CurrentItem}"
                                       Click="Button_Menu_Click"/>

                    <local:SidebarItem Title="Quản lý quy trình bảo trì" 
                                       Icon="CalendarClock" 
                                       NavTag="QLQTBT"
                                       CurrentActiveTag="{Binding ElementName=ucSidebar, Path=CurrentItem}"
                                       Click="Button_Menu_Click"/>
                    <local:SidebarItem Title="Quản lý kho vật tư" 
                                       Icon="Restore" 
                                       NavTag="QLKVT"
                                       CurrentActiveTag="{Binding ElementName=ucSidebar, Path=CurrentItem}"
                                       Click="Button_Menu_Click"/>
                    <local:SidebarItem Title="Báo cáo thống kê" 
                                        Icon="Form" 
                                        NavTag="BCTK"
                                        CurrentActiveTag="{Binding ElementName=ucSidebar, Path=CurrentItem}"
                                        Click="Button_Menu_Click"/>

                </StackPanel>
            </ScrollViewer>

            <!-- 3. FOOTER -->
            <StackPanel Grid.Row="2" Margin="10,0,10,20">
                <Separator Background="{StaticResource SeparatorBrush}" Margin="10,10,10,15"/>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountCircleOutline" Width="22" Height="22" VerticalAlignment="Center"/>
                        <TextBlock Text="admin" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Logout_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Logout" Width="22" Height="22" VerticalAlignment="Center"/>
                        <TextBlock Text="Đăng xuất" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>