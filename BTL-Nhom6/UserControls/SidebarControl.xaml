<UserControl x:Class="BTL_Nhom6.UserControls.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             xmlns:local="clr-namespace:BTL_Nhom6"
             xmlns:enums="clr-namespace:BTL_Nhom6.Enums"
             
             Name="MySidebar">
    <!-- Đặt Name để binding dễ hơn -->

    <UserControl.Resources>
        <!-- 1. Định nghĩa Style cơ bản cho nút Menu (MenuButtonStyle) -->
        <!-- Đã thêm lại ControlTemplate có CornerRadius="8" để bo tròn -->
        <Style x:Key="BaseSidebarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="20 0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <!-- QUAN TRỌNG: Định nghĩa lại khung nút để có bo tròn -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- CornerRadius="8" tạo độ bo tròn -->
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="8" 
                            Margin="0,2"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>

                        <!-- Hiệu ứng Hover mặc định (khi chưa Active) -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource MenuHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 2. Không cần ActiveMenuButtonStyle riêng vì ta dùng Trigger trực tiếp trong nút -->
        <!-- Nhưng ta cần đảm bảo màu sắc Hover trong Code Button bên dưới khớp -->
    </UserControl.Resources>

    <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header (Giữ nguyên) -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,30,20,30">
                <materialDesign:PackIcon Kind="Cog" Width="30" Height="30" Foreground="{StaticResource TextWhiteBrush}" VerticalAlignment="Center"/>
                <TextBlock Text="Admin" Foreground="{StaticResource TextWhiteBrush}" FontSize="20" FontWeight="Bold" Margin="15,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="{StaticResource SeparatorBrush}" Margin="20,0"/>

            <!-- MENU ITEMS -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,20,10,0">
                <StackPanel>

                    <!-- 1. TRANG CHỦ -->
                    <!-- Nút Trang Chủ -->
                    <Button Click="Button_Home_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource BaseSidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveItem, ElementName=MySidebar}" Value="{x:Static enums:SidebarItem.Home}">
                                        <!-- Khi Active -> Đổi màu nền (vẫn giữ bo tròn do Template quy định) -->
                                        <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
                                        <!-- Bạn nên dùng MenuActiveBrush thay vì MenuActiveHoverBrush để đúng màu thiết kế -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Home" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Trang chủ" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- 2. QUẢN TRỊ HỆ THỐNG -->
                    <!-- Nút Quản trị hệ thống -->
                    <Button Click="Button_QTHT_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource BaseSidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveItem, ElementName=MySidebar}" Value="{x:Static enums:SidebarItem.System}">
                                        <!-- Khi Active -> Đổi màu nền (vẫn giữ bo tròn do Template quy định) -->
                                        <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
                                        <!-- Bạn nên dùng MenuActiveBrush thay vì MenuActiveHoverBrush để đúng màu thiết kế -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountMultiple" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Quản trị hệ thống" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Nút Quản lý thông tin danh mục  -->
                    <Button Click="Button_QLTTDM_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource BaseSidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveItem, ElementName=MySidebar}" Value="{x:Static enums:SidebarItem.Category}">
                                        <!-- Khi Active -> Đổi màu nền (vẫn giữ bo tròn do Template quy định) -->
                                        <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
                                        <!-- Bạn nên dùng MenuActiveBrush thay vì MenuActiveHoverBrush để đúng màu thiết kế -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Category" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Quản lý thông tin danh mục" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Nút Quản lý thiết bị -->
                    <Button Click="Button_QLTB_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource BaseSidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveItem, ElementName=MySidebar}" Value="{x:Static enums:SidebarItem.Device}">
                                        <!-- Khi Active -> Đổi màu nền (vẫn giữ bo tròn do Template quy định) -->
                                        <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
                                        <!-- Bạn nên dùng MenuActiveBrush thay vì MenuActiveHoverBrush để đúng màu thiết kế -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Devices" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Quản lý thiết bị" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Nút Quản lý quy trình bảo trì -->
                    <Button Click="Button_QLQTBT_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource BaseSidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveItem, ElementName=MySidebar}" Value="{x:Static enums:SidebarItem.Maintenance}">
                                        <!-- Khi Active -> Đổi màu nền (vẫn giữ bo tròn do Template quy định) -->
                                        <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
                                        <!-- Bạn nên dùng MenuActiveBrush thay vì MenuActiveHoverBrush để đúng màu thiết kế -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ScheduledMaintenance" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Quản lý quy trình bảo tri" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Nút Quản lý kho -->
                    <Button Click="Button_QLK_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource BaseSidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveItem, ElementName=MySidebar}" Value="{x:Static enums:SidebarItem.Inventory}">
                                        <!-- Khi Active -> Đổi màu nền (vẫn giữ bo tròn do Template quy định) -->
                                        <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
                                        <!-- Bạn nên dùng MenuActiveBrush thay vì MenuActiveHoverBrush để đúng màu thiết kế -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Storage" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Quản lý kho" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Nút Báo cáo thống kê -->
                    <Button Click="Button_BCTK_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource BaseSidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveItem, ElementName=MySidebar}" Value="{x:Static enums:SidebarItem.Report}">
                                        <!-- Khi Active -> Đổi màu nền (vẫn giữ bo tròn do Template quy định) -->
                                        <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
                                        <!-- Bạn nên dùng MenuActiveBrush thay vì MenuActiveHoverBrush để đúng màu thiết kế -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Report" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Báo cáo thống kê" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer (Giữ nguyên) -->
            <StackPanel Grid.Row="2" Margin="10,0,10,20">
                <Separator Background="{StaticResource SeparatorBrush}" Margin="10,10,10,15"/>
                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountCircle" Width="22" Height="22" VerticalAlignment="Center"/>
                        <TextBlock Text="admin" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Logout_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Logout" Width="22" Height="22" VerticalAlignment="Center"/>
                        <TextBlock Text="Đăng xuất" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>