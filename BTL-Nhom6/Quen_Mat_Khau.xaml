<Window x:Class="BTL_Nhom6.Quen_Mat_Khau"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BTL_Nhom6"
        mc:Ignorable="d"
        Title="Quên Mật Khẩu" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True" 
        Background="Transparent"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <!-- Sử dụng Card bao ngoài giống hệt Form Đăng nhập để có bo góc và bóng đổ chuẩn -->
    <materialDesign:Card UniformCornerRadius="15" Background="White" Margin="10" 
                         materialDesign:ElevationAssist.Elevation="Dp8">

        <!-- Sự kiện MouseDown để kéo thả cửa sổ -->
        <Grid MouseDown="Border_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <!-- Cột Trái -->
                <ColumnDefinition Width="1*"/>
                <!-- Cột Phải -->
            </Grid.ColumnDefinitions>

            <!-- ================= CỘT TRÁI (GRADIENT BLUE) ================= -->
            <Border Grid.Column="0" CornerRadius="15,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#003399" Offset="0.0"/>
                        <GradientStop Color="#0055CC" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header nhỏ -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                        <materialDesign:PackIcon Kind="CogOutline" Foreground="White" Width="25" Height="25" VerticalAlignment="Center"/>
                        <TextBlock Text="Bảo trì thiết bị" Foreground="White" FontSize="16" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Ảnh minh họa -->
                    <Image Grid.Row="1" Source="https://cdn-icons-png.flaticon.com/512/2083/2083236.png" Margin="20" VerticalAlignment="Center"/>

                    <!-- Footer Text -->
                    <StackPanel Grid.Row="2" VerticalAlignment="Bottom" Margin="0,0,0,20">
                        <TextBlock Text="Khôi phục quyền truy cập" Foreground="White" FontSize="22" FontWeight="Bold" TextWrapping="Wrap"/>
                        <TextBlock Text="Đặt lại mật khẩu để tiếp tục quản lý." Foreground="#CCFFFFFF" FontSize="14" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ================= CỘT PHẢI (FORM MATERIAL DESIGN) ================= -->
            <Grid Grid.Column="1" Margin="40">
                <!-- Nút Đóng (X) -->
                <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="-20,-20,-20,0"
                        Click="BtnClose_Click"
                        ToolTip="Đóng">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="Gray"/>
                </Button>

                <StackPanel VerticalAlignment="Center">
                    <!-- Tiêu đề -->
                    <TextBlock Text="Đổi mật khẩu" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,0,0,30"/>

                    <!-- 1. Tên đăng nhập -->
                    <TextBlock Text="Tên đăng nhập" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Nhập tên tài khoản"
                             Height="45"
                             Padding="10,10"
                             BorderBrush="#DDD"
                             Margin="0,0,0,20"/>

                    <!-- 2. Mật khẩu mới (Tự động có nút Mắt) -->
                    <TextBlock Text="Mật khẩu mới" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtNewPass"
                                 Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                                 materialDesign:HintAssist.Hint="Nhập mật khẩu mới"
                                 Height="45"
                                 Padding="10,10"
                                 BorderBrush="#DDD"
                                 Margin="0,0,0,20"/>

                    <!-- 3. Xác nhận mật khẩu (Tự động có nút Mắt) -->
                    <TextBlock Text="Xác nhận mật khẩu" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtConfirmPass"
                                 Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                                 materialDesign:HintAssist.Hint="Nhập lại mật khẩu mới"
                                 Height="45"
                                 Padding="10,10"
                                 BorderBrush="#DDD"
                                 Margin="0,0,0,25"/>

                    <!-- 4. Nút Xác nhận thay đổi -->
                    <Button Content="Xác nhận thay đổi"
                            Click="BtnChangePassword_Click"
                            Foreground="White"
                            Height="50"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#0055CC"
                            BorderBrush="{x:Null}"
                            materialDesign:ButtonAssist.CornerRadius="25">
                        <Button.Effect>
                            <DropShadowEffect Color="#0055CC" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
                        </Button.Effect>
                    </Button>

                    <!-- 5. Nút Quay lại -->
                    <!-- Tìm nút cũ và THAY THẾ bằng đoạn code này -->
                    <Button Content="← Quay lại đăng nhập"
        Click="BtnBackToLogin_Click"
        HorizontalAlignment="Center"
        Margin="0,20,0,0"
        Background="Transparent"
        BorderThickness="0"
        Foreground="#666"
        FontSize="14"
        Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- HIỆU ỨNG KHI DI CHUỘT (Hover) -->
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <!-- Đổi sang màu xanh chủ đạo -->
                                        <Setter Property="Foreground" Value="#0055CC"/>
                                        <!-- Chữ đậm lên -->
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </materialDesign:Card>
</Window>