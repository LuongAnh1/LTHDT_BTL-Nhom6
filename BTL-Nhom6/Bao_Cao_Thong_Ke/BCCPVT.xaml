<Window x:Class="BTL_Nhom6.Bao_Cao_Thong_Ke.BCCPVT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"        
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"       
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Báo cáo Chi phí &amp; Vật tư" 
        Height="800" Width="1440"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <!-- 1. RESOURCES (Đã thêm để sửa lỗi "Resource not found") -->
    <Window.Resources>
        <!-- STYLE: HEADER DATAGRID -->
        <Style x:Key="CustomDataGridColumnHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="{StaticResource SidebarBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- STYLE: INPUT (COMBOBOX/DATEPICKER) -->
        <Style x:Key="FilterInputStyle" TargetType="Control" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Background" Value="{StaticResource ContentBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 2. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="BCTK"/>

        <!-- 3. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Row 0: Header -->
                <RowDefinition Height="Auto"/>
                <!-- Row 1: Tabs -->
                <RowDefinition Height="*"/>
                <!-- Row 2: Content Scroll -->
            </Grid.RowDefinitions>

            <!-- ROW 0: HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Báo cáo thống kê" 
                   FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                   Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- ROW 1: TABS -->
            <Border Grid.Row="1" Margin="32,0,32,16" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Chi phí vật tư" Style="{StaticResource ActiveTabButtonStyle}" Click="Button_ChiPhiVatTu_Click"/>
                        <Button Content="Hiệu suất bảo trì" Style="{StaticResource TabButtonStyle}" Click="Button_HieuSuatBaoTri_Click"/>
                        <Button Content="Năng suất KTV" Style="{StaticResource TabButtonStyle}" Click="Button_NangSuatKTV_Click"/>
                        <Button Content="Theo dõi bảo hành &amp; NCC" Style="{StaticResource TabButtonStyle}" Click="Button_BaoHanhNCC_Click"/>
                        <Button Content="Tình trạng thiết bị" Style="{StaticResource TabButtonStyle}" Click="Button_TinhTrangThietBi_Click"/>
                        <Button Content="Thống kê lỗi &amp; Sự cố" Style="{StaticResource TabButtonStyle}" Click="Button_ThongKeLoi_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- ROW 2: SCROLLABLE CONTENT -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="50,0,40,40">
                <StackPanel>

                    <!-- SECTION 1: BỘ LỌC -->
                    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="4" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Padding="20" Margin="0,0,0,24">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Filter Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FilterVariant" Width="20" Height="20" Foreground="{StaticResource PrimaryBlueBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Bộ lọc dữ liệu" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>

                                <Button HorizontalAlignment="Right" Content="Xuất báo cáo"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Background="#EFF6FF" Foreground="{StaticResource PrimaryBlueBrush}"
                                        Height="32" Padding="12,0" FontSize="13" FontWeight="Bold"
                                        materialDesign:ButtonAssist.CornerRadius="4"/>
                            </Grid>

                            <!-- Filter Inputs -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Thời gian" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <DatePicker materialDesign:HintAssist.Hint="Chọn tháng/năm" Style="{StaticResource MaterialDesignOutlinedDatePicker}" BorderBrush="{StaticResource BorderLightBrush}" Background="White" Height="42" Padding="10,8"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Loại chi phí" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <ComboBox materialDesign:HintAssist.Hint="Tất cả" Style="{StaticResource MaterialDesignOutlinedComboBox}" BorderBrush="{StaticResource BorderLightBrush}" Background="White" Height="42" Padding="10,8">
                                        <ComboBoxItem Content="Tất cả"/>
                                        <ComboBoxItem Content="Chi phí nhân công"/>
                                        <ComboBoxItem Content="Chi phí vật tư"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Phân xưởng" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <ComboBox materialDesign:HintAssist.Hint="Toàn nhà máy" Style="{StaticResource MaterialDesignOutlinedComboBox}" BorderBrush="{StaticResource BorderLightBrush}" Background="White" Height="42" Padding="10,8"/>
                                </StackPanel>

                                <StackPanel Grid.Column="6">
                                    <TextBlock Text="Tìm kiếm" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <TextBox materialDesign:HintAssist.Hint="Mã phiếu, nội dung..." Style="{StaticResource MaterialDesignOutlinedTextBox}" BorderBrush="{StaticResource BorderLightBrush}" Background="White" Height="42" Padding="10,8"/>
                                </StackPanel>

                                <!-- Nút Áp dụng có sự kiện Click -->
                                <Button Grid.Column="8" VerticalAlignment="Bottom" 
                                        Content="Áp dụng" Click="BtnLocDuLieu_Click"
                                        Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0"
                                        Foreground="White" FontWeight="SemiBold"
                                        Height="42" materialDesign:ButtonAssist.CornerRadius="4"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- SECTION 2: BIỂU ĐỒ (LIVECHARTS - Đã sửa lỗi Separator) -->
                    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="4" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Padding="24" Margin="0,0,0,40">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="350"/>
                            </Grid.RowDefinitions>

                            <!-- Chart Title -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock Text="Biểu đồ chi phí theo thời gian" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Border Width="12" Height="12" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="2" Margin="0,0,8,0"/>
                                    <TextBlock Text="Nhân công" VerticalAlignment="Center" Margin="0,0,16,0" FontSize="13"/>
                                    <Border Width="12" Height="12" Background="#93C5FD" CornerRadius="2" Margin="0,0,8,0"/>
                                    <TextBlock Text="Vật tư" VerticalAlignment="Center" FontSize="13"/>
                                </StackPanel>
                            </Grid>

                            <!-- LiveChart Control -->
                            <lvc:CartesianChart Grid.Row="1" Series="{Binding SeriesCollection}" LegendLocation="None">
                                <lvc:CartesianChart.AxisX>
                                    <!-- CHỈ GIỮ LẠI LABELS, KHÔNG DÙNG SEPARATOR Ở THẺ MỞ -->
                                    <lvc:Axis Labels="{Binding Labels}">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator Step="1" StrokeThickness="0" />
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>

                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis LabelFormatter="{Binding CurrencyFormatter}" MinValue="0">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator Stroke="#E5E7EB" StrokeThickness="1" StrokeDashArray="2"/>
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </Grid>
                    </Border>

                    <!-- SECTION 3: DATAGRID -->
                    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="4" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" ClipToBounds="True">
                        <StackPanel>
                            <Grid Margin="24,20">
                                <TextBlock Text="Chi tiết chi phí phát sinh" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Grid>

                            <DataGrid x:Name="dgChiPhi"
                                  ItemsSource="{Binding DanhSachChiPhi}" 
                                  Margin="0, 20, 0, 0"
                                  ColumnHeaderHeight="50"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  Background="{StaticResource ContentBackgroundBrush}"
                                  BorderThickness="0"
                                  RowHeight="54"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                                  ColumnHeaderStyle="{StaticResource CustomDataGridColumnHeader}"
                                  CellStyle="{StaticResource MaterialDesignDataGridCell}" 
                                  Width="1110">

                                <DataGrid.Columns>
                                    <!-- 1. MÃ PHIẾU -->
                                    <DataGridTextColumn Binding="{Binding MaPhieu}" Width="140" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="MÃ PHIẾU" Margin="16,0,0,0" VerticalAlignment="Center"/>
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Padding" Value="16,0,0,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- 2. LOẠI CHI PHÍ -->
                                    <DataGridTemplateColumn Width="180">
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="LOẠI CHI PHÍ" Margin="16,0,0,0" VerticalAlignment="Center"/>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="12" Padding="12,4" HorizontalAlignment="Left" Margin="16,0,0,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LoaiChiPhi}" Value="Nhân công">
                                                                    <Setter Property="Background" Value="#DBEAFE"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding LoaiChiPhi}" Value="Vật tư">
                                                                    <Setter Property="Background" Value="#DCFCE7"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding LoaiChiPhi}" FontSize="12" FontWeight="Bold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding LoaiChiPhi}" Value="Nhân công">
                                                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding LoaiChiPhi}" Value="Vật tư">
                                                                        <Setter Property="Foreground" Value="{StaticResource SuccessGreenBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 3. NỘI DUNG -->
                                    <DataGridTextColumn Binding="{Binding NoiDung}" Width="*">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="NỘI DUNG CHI TIẾT" Margin="16,0,0,0" VerticalAlignment="Center"/>
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Padding" Value="16,0,0,0"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- 4. NGÀY -->
                                    <DataGridTextColumn Binding="{Binding Ngay}" Width="160" Foreground="{StaticResource TextSecondaryBrush}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="NGÀY GHI NHẬN" Margin="16,0,0,0" VerticalAlignment="Center"/>
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- 5. SỐ TIỀN -->
                                    <DataGridTextColumn Binding="{Binding SoTienString}" Width="160" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource CustomDataGridColumnHeader}">
                                                <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="SỐ TIỀN (VNĐ)" Margin="0,0,24,0" VerticalAlignment="Center"/>
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,24,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Footer Total -->
                            <Border Background="#F9FAFB" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderLightBrush}" Padding="24,16">
                                <Grid>
                                    <TextBlock Text="Tổng cộng:" FontWeight="Bold" FontSize="15" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding TongTienHienThi}" FontWeight="Bold" FontSize="18" Foreground="{StaticResource PrimaryBlueBrush}" Margin="0,0,24,0"/>
                                        <TextBlock Text="VNĐ" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>