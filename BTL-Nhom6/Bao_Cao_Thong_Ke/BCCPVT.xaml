<Window x:Class="BTL_Nhom6.Bao_Cao_Thong_Ke.BCCPVT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Báo cáo Chi phí &amp; Vật tư" 
        Height="800" Width="1440"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- STYLE: HEADER DATAGRID -->
        <Style x:Key="CustomDataGridColumnHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="{StaticResource SidebarBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- STYLE: INPUT (COMBOBOX/DATEPICKER) -->
        <Style x:Key="FilterInputStyle" TargetType="Control" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Background" Value="{StaticResource ContentBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="BCTK"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Content Scroll -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Báo cáo thống kê" 
                   FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                   Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- TABS -->
            <!-- Đã cập nhật sự kiện Click cho các nút Tab -->
            <Border Grid.Row="1" Margin="32,0,32,16" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal">
                        <!-- Tab hiện tại -->
                        <Button Content="Chi phí vật tư" Style="{StaticResource ActiveTabButtonStyle}" Click="Button_ChiPhiVatTu_Click"/>

                        <!-- Các Tab chuyển trang -->
                        <Button Content="Hiệu suất bảo trì" Style="{StaticResource TabButtonStyle}" Click="Button_HieuSuatBaoTri_Click"/>
                        <Button Content="Năng suất KTV" Style="{StaticResource TabButtonStyle}" Click="Button_NangSuatKTV_Click"/>
                        <Button Content="Theo dõi bảo hành &amp; NCC" Style="{StaticResource TabButtonStyle}" Click="Button_BaoHanhNCC_Click"/>
                        <Button Content="Tình trạng thiết bị" Style="{StaticResource TabButtonStyle}" Click="Button_TinhTrangThietBi_Click"/>
                        <Button Content="Thống kê lỗi &amp; Sự cố" Style="{StaticResource TabButtonStyle}" Click="Button_ThongKeLoi_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- SCROLLABLE CONTENT -->
            <!-- Đã tăng Padding Right (số thứ 3) lên 50 để tách bảng khỏi thanh cuộn -->
            <!-- SCROLLABLE CONTENT -->
            <!-- Đã tăng Padding Left (số đầu tiên) lên 50 để bảng rời xa thanh Sidebar -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="50,0,40,40">
                <StackPanel>

                    <!-- SECTION 1: BỘ LỌC -->
                    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="4" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Padding="20" Margin="0,0,0,24">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Filter Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FilterVariant" Width="20" Height="20" Foreground="{StaticResource PrimaryBlueBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Bộ lọc dữ liệu" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>

                                <Button HorizontalAlignment="Right" Content="Xuất báo cáo"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Background="#EFF6FF" Foreground="{StaticResource PrimaryBlueBrush}"
                                        Height="32" Padding="12,0" FontSize="13" FontWeight="Bold"
                                        materialDesign:ButtonAssist.CornerRadius="4"/>
                            </Grid>

                            <!-- Filter Inputs -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Thời gian" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <DatePicker materialDesign:HintAssist.Hint="Chọn tháng/năm" 
                                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                                BorderBrush="{StaticResource BorderLightBrush}" Background="White" Height="42" Padding="10,8"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Loại chi phí" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <ComboBox materialDesign:HintAssist.Hint="Tất cả" 
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              BorderBrush="{StaticResource BorderLightBrush}" Background="White" Height="42" Padding="10,8">
                                        <ComboBoxItem Content="Tất cả"/>
                                        <ComboBoxItem Content="Chi phí nhân công"/>
                                        <ComboBoxItem Content="Chi phí vật tư"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Phân xưởng" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <ComboBox materialDesign:HintAssist.Hint="Toàn nhà máy" 
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              BorderBrush="{StaticResource BorderLightBrush}" Background="White" Height="42" Padding="10,8"/>
                                </StackPanel>

                                <StackPanel Grid.Column="6">
                                    <TextBlock Text="Tìm kiếm" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <TextBox materialDesign:HintAssist.Hint="Mã phiếu, nội dung..." 
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             BorderBrush="{StaticResource BorderLightBrush}" Background="White" Height="42" Padding="10,8"/>
                                </StackPanel>

                                <Button Grid.Column="8" VerticalAlignment="Bottom" 
                                        Content="Áp dụng"
                                        Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0"
                                        Foreground="White" FontWeight="SemiBold"
                                        Height="42" materialDesign:ButtonAssist.CornerRadius="4"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- SECTION 2: BIỂU ĐỒ -->
                    <!-- Tăng Margin Bottom lên 40 để chữ tràn xuống không bị dính vào bảng bên dưới -->
                    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="4" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Padding="24" Margin="0,0,0,40">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- SỬA 1: Tăng chiều cao lên 350 để cột và chữ thoải mái hiển thị -->
                                <RowDefinition Height="350"/>
                            </Grid.RowDefinitions>

                            <!-- Tiêu đề và chú thích (Giữ nguyên) -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock Text="Biểu đồ chi phí theo thời gian" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Border Width="12" Height="12" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="2" Margin="0,0,8,0"/>
                                    <TextBlock Text="Nhân công" VerticalAlignment="Center" Margin="0,0,16,0" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <Border Width="12" Height="12" Background="#93C5FD" CornerRadius="2" Margin="0,0,8,0"/>
                                    <TextBlock Text="Vật tư" VerticalAlignment="Center" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Khu vực biểu đồ -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 1. TRỤC Y (SỐ LIỆU): Cố định chiều cao 300 và căn Top -->
                                <UniformGrid Grid.Column="0" Columns="1" VerticalAlignment="Top" Height="300" Margin="0,0,10,0">
                                    <TextBlock Text="20M" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                    <TextBlock Text="15M" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                    <TextBlock Text="10M" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                    <TextBlock Text="5M" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                    <TextBlock Text="0" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                </UniformGrid>

                                <!-- 2. VÙNG BIỂU ĐỒ -->
                                <Grid Grid.Column="1">
                                    <!-- LAYER 1: ĐƯỜNG KẺ TRỤC HOÀNH -->
                                    <!-- Vẽ một Border cao đúng 300px để tạo đường kẻ chuẩn ở vị trí số 0 -->
                                    <Border VerticalAlignment="Top" Height="300" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1"/>

                                    <!-- LAYER 2: CÁC CỘT DỮ LIỆU VÀ CHỮ -->
                                    <UniformGrid Columns="6">

                                        <!-- CẤU TRÚC MỖI CỘT: Chia làm 2 hàng (Trên 300px chứa cột, Dưới chứa chữ) -->

                                        <!-- Cột 1 -->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="300"/>
                                                <!-- Khớp với chiều cao trục Y -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- Tự động dãn để chứa chữ -->
                                            </Grid.RowDefinitions>

                                            <!-- Phần biểu đồ: Căn đáy của vùng 300px -->
                                            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Width="40">
                                                <Border Height="80" Background="#93C5FD" CornerRadius="4,4,0,0" ToolTip="Vật tư"/>
                                                <Border Height="60" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="0,0,0,0" ToolTip="Nhân công"/>
                                            </StackPanel>

                                            <!-- Phần chữ: Nằm ở hàng dưới, không bao giờ bị đường kẻ che hay cắt -->
                                            <TextBlock Grid.Row="1" Text="T5/2024" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Grid>

                                        <!-- Cột 2 -->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="300"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Width="40">
                                                <Border Height="100" Background="#93C5FD" CornerRadius="4,4,0,0"/>
                                                <Border Height="70" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="0,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Grid.Row="1" Text="T6/2024" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Grid>

                                        <!-- Cột 3 -->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="300"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Width="40">
                                                <Border Height="60" Background="#93C5FD" CornerRadius="4,4,0,0"/>
                                                <Border Height="50" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="0,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Grid.Row="1" Text="T7/2024" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Grid>

                                        <!-- Cột 4 -->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="300"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Width="40">
                                                <Border Height="120" Background="#93C5FD" CornerRadius="4,4,0,0"/>
                                                <Border Height="80" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="0,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Grid.Row="1" Text="T8/2024" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Grid>

                                        <!-- Cột 5 -->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="300"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Width="40">
                                                <Border Height="90" Background="#93C5FD" CornerRadius="4,4,0,0"/>
                                                <Border Height="65" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="0,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Grid.Row="1" Text="T9/2024" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Grid>

                                        <!-- Cột 6 -->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="300"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Width="40">
                                                <Border Height="110" Background="#93C5FD" CornerRadius="4,4,0,0"/>
                                                <Border Height="90" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="0,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Grid.Row="1" Text="T10/2024" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Grid>

                                    </UniformGrid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- SECTION 3: DATAGRID -->
                    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="4" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" ClipToBounds="True">
                        <StackPanel>
                            <!-- Table Title -->
                            <Grid Margin="24,20">
                                <TextBlock Text="Chi tiết chi phí phát sinh" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Grid>

                            <!-- DataGrid -->
                            <DataGrid x:Name="dgChiPhi"
                                  Margin="0, 20, 0, 0"
                                  ColumnHeaderHeight="50"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  Background="{StaticResource ContentBackgroundBrush}"
                                  BorderThickness="0"
                                  RowHeight="54"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                                  ColumnHeaderStyle="{StaticResource CustomDataGridColumnHeader}"
                                  CellStyle="{StaticResource MaterialDesignDataGridCell}" 
                                  Width="1110">

                                <DataGrid.Columns>
                                    <!-- 1. MÃ PHIẾU: Dùng TextBlock trong Header để set Margin 16 giống hệt Cell -->
                                    <DataGridTextColumn Binding="{Binding MaPhieu}" Width="140" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="MÃ PHIẾU" Margin="16,0,0,0" VerticalAlignment="Center"/>
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Padding" Value="16,0,0,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- 2. LOẠI CHI PHÍ: Header cách trái 16px để thẳng hàng với Badge -->
                                    <DataGridTemplateColumn Width="180">
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="LOẠI CHI PHÍ" Margin="16,0,0,0" VerticalAlignment="Center"/>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="12" Padding="12,4" HorizontalAlignment="Left" Margin="16,0,0,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LoaiChiPhi}" Value="Nhân công">
                                                                    <Setter Property="Background" Value="#DBEAFE"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding LoaiChiPhi}" Value="Vật tư">
                                                                    <Setter Property="Background" Value="#DCFCE7"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding LoaiChiPhi}" FontSize="12" FontWeight="Bold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding LoaiChiPhi}" Value="Nhân công">
                                                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding LoaiChiPhi}" Value="Vật tư">
                                                                        <Setter Property="Foreground" Value="{StaticResource SuccessGreenBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 3. NỘI DUNG: Header cách trái 16px -->
                                    <DataGridTextColumn Binding="{Binding NoiDung}" Width="*">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="NỘI DUNG CHI TIẾT" Margin="16,0,0,0" VerticalAlignment="Center"/>
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Padding" Value="16,0,0,0"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- 4. NGÀY GHI NHẬN: Header cách trái 16px -->
                                    <DataGridTextColumn Binding="{Binding Ngay}" Width="160" Foreground="{StaticResource TextSecondaryBrush}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="NGÀY GHI NHẬN" Margin="16,0,0,0" VerticalAlignment="Center"/>
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <!-- Quan trọng: Căn giữa dữ liệu -->
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>

                                    </DataGridTextColumn>

                                    <!-- 5. CỘT SỐ TIỀN: Căn PHẢI cả Tiêu đề và Dữ liệu -->
                                    <DataGridTextColumn Binding="{Binding SoTien}" Width="160" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">

                                        <!-- HEADER STYLE: Quan trọng - Ép nội dung header sang phải -->
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource CustomDataGridColumnHeader}">
                                                <!-- Dòng này ép tiêu đề chạy sang phải -->
                                                <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>

                                        <!-- NỘI DUNG HEADER: TextBlock cách lề phải 24px -->
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="SỐ TIỀN (VNĐ)" Margin="0,0,24,0" VerticalAlignment="Center"/>
                                        </DataGridTextColumn.Header>

                                        <!-- CELL STYLE: Dữ liệu căn giữa -->
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <!-- Quan trọng: Căn giữa dữ liệu số tiền -->
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>

                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Footer Total -->
                            <Border Background="#F9FAFB" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderLightBrush}" Padding="24,16">
                                <Grid>
                                    <TextBlock Text="Tổng cộng:" FontWeight="Bold" FontSize="15" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="14,000,000" FontWeight="Bold" FontSize="18" Foreground="{StaticResource PrimaryBlueBrush}" Margin="0,0,24,0"/>
                                        <TextBlock Text="VNĐ" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>