<Window x:Class="BTL_Nhom6.Bao_Cao_Thong_Ke.ChiTietXepHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Bảng Xếp Hạng Chi Tiết" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <!-- Style cho Tag Kỹ năng -->
        <Style x:Key="SmallSkillTag" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="Background" Value="#E0F2FE"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlueBrush}" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Podium" Width="30" Height="30" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="BẢNG XẾP HẠNG KỸ THUẬT VIÊN" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- List KTV -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
            <ItemsControl x:Name="icDanhSachKTV">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="8" Margin="0,0,0,12" Padding="15" Effect="{StaticResource MaterialDesignShadowDepth1}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- Hạng -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Thông tin -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- Số lượng -->
                                </Grid.ColumnDefinitions>

                                <!-- Cột 1: Hạng (Icon Cup hoặc Số thứ tự) -->
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Background="#F1F5F9" Margin="0,0,15,0">
                                    <TextBlock Text="{Binding Rank}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Foreground="#64748B"/>
                                </Border>

                                <!-- Cột 2: Thông tin -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TenKTV}" FontWeight="Bold" FontSize="15" Foreground="#0F172A"/>

                                    <!-- List Kỹ năng -->
                                    <ItemsControl ItemsSource="{Binding DanhSachKyNang}" Margin="0,6,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource SmallSkillTag}">
                                                    <TextBlock Text="{Binding}" FontSize="11" Foreground="#0284C7"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Cột 3: Số công việc -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding TongCongViec}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" HorizontalAlignment="Right"/>
                                    <TextBlock Text="Công việc" FontSize="11" Foreground="Gray" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer: Nút đóng -->
        <Button Grid.Row="2" Content="Đóng" IsCancel="True" Click="BtnClose_Click"
                Style="{StaticResource MaterialDesignFlatButton}" Margin="10"/>
    </Grid>
</Window>