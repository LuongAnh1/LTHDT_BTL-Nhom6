<Window x:Class="BTL_Nhom6.Quan_Ly_Bao_Tri_Va_Su_Co.KKVT_va_NT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Kê khai Vật tư &amp; Nghiệm thu" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- 1. Style Header của Bảng (Đồng bộ với các form khác) -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="45"/>
        </Style>

        <!-- 2. Style cho Cell -->
        <Style x:Key="CustomDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLQTBT"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Scroll Content -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý quy trình bảo trì" 
                     FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                     Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- TABS NAVIGATION -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,10,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý yêu cầu bảo trì" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="0" Click="Button_QLYCBT_Click"/>
                    <Button Content="Điều phối công việc" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_DieuPhoi_Click"/>
                    <Button Content="Cập nhật phiếu công việc" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_CapNhat_Click"/>
                    <Button Content="Kê khai vật tư &amp; Nghiệm thu" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="32,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- MAIN FORM SCROLL -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,0,20">
                <StackPanel Margin="32,0,32,0">

                    <!-- SECTION 1: CHỌN PHIẾU -->
                    <Border Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Padding="24" Margin="0,0,0,24">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Chọn Phiếu công việc cần nghiệm thu (*):" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <ComboBox x:Name="cboWorkOrder"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          Height="50"
                                          materialDesign:HintAssist.Hint="Tìm kiếm theo mã phiếu hoặc tên thiết bị..."
                                          IsEditable="True"
                                          DisplayMemberPath="DisplayText"
                                          SelectedValuePath="WorkOrderID"
                                          SelectionChanged="cboWorkOrder_SelectionChanged">
                                    <!-- Data sẽ được load từ Code Behind -->
                                </ComboBox>
                            </StackPanel>

                            <!-- Thông tin tóm tắt bên phải -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,4">
                                <TextBlock Text="Thông tin tóm tắt:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#E3F2FD" CornerRadius="4" Padding="12,6" Margin="0,0,12,0">
                                        <TextBlock x:Name="lblStatus" Text="Trạng thái: ---" Foreground="{StaticResource PrimaryBlueBrush}" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="#F5F5F5" CornerRadius="4" Padding="12,6" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                                        <TextBlock x:Name="lblTech" Text="KTV: ---" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- SECTION 2: DANH SÁCH VẬT TƯ -->
                    <Border Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" ClipToBounds="True" Margin="0,0,0,24">
                        <StackPanel>
                            <!-- Header Section -->
                            <Grid Margin="24">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Tools" Foreground="{StaticResource PrimaryBlueBrush}" Width="24" Height="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Kê khai vật tư tiêu hao" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <!-- DATA GRID -->
                            <DataGrid x:Name="dgVatTu" 
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False"
                                      SelectionMode="Single"
                                      Background="White"
                                      BorderThickness="1,0,1,0" BorderBrush="{StaticResource BorderLightBrush}"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                      CellStyle="{StaticResource CustomDataGridCell}"
                                      RowHeight="50">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="TÊN VẬT TƯ" Binding="{Binding TenVatTu}" Width="3*" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="ĐƠN VỊ" Binding="{Binding DonVi}" Width="100" IsReadOnly="True"/>

                                    <!-- CỘT MỚI: SL ĐÃ XUẤT (Lấy từ phiếu xuất - ReadOnly) -->
                                    <DataGridTextColumn Header="SL ĐÃ XUẤT" Binding="{Binding SoLuongXuat}" Width="120" IsReadOnly="True" FontWeight="Bold"/>

                                    <!-- CỘT SỬA: SL THỰC TẾ (KTV nhập) -->
                                    <DataGridTemplateColumn Header="SL THỰC TẾ" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding SoLuong, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Height="40" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                             IsReadOnly="False"/>
                                                <!-- Cho phép sửa -->
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn Header="ĐƠN GIÁ" Binding="{Binding DonGia, StringFormat=N0}" Width="150" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="THÀNH TIỀN" Binding="{Binding ThanhTien, StringFormat=N0}" FontWeight="Bold" Width="150" IsReadOnly="True"/>

                                    <!-- XÓA CỘT NÚT XÓA ĐI -->
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Footer Table -->
                            <Border Background="#FAFAFA" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderLightBrush}" Padding="24,16">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,230,0">
                                    <TextBlock Text="Tổng tiền vật tư:" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,16,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="lblTongTienVatTu" Text="0 VNĐ" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- SECTION 3: CHI PHÍ KHÁC & TỔNG KẾT -->
                    <Grid Margin="0,0,0,32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: Chi phí khác -->
                        <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Padding="24">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <materialDesign:PackIcon Kind="CashMultiple" Foreground="{StaticResource PrimaryBlueBrush}" Width="24" Height="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Chi phí phát sinh (Nếu có)" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Grid nhập liệu -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <!-- Cột nhãn -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Cột nhập liệu -->
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Row 1: Nhân công -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nhân công:" 
               VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,20"/>

                                    <TextBox x:Name="txtNhanCong" 
                                             Grid.Row="0" Grid.Column="1" 
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="Nhập số tiền..." 
                                             materialDesign:TextFieldAssist.SuffixText="VNĐ"
                                             Height="52" 
                                             Padding="12,0"
                                             VerticalContentAlignment="Center"
                                             Margin="0,0,0,20"/>

                                    <!-- Row 2: Vận chuyển -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Vận chuyển:" 
               VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,20"/>

                                    <TextBox x:Name="txtVanChuyen" 
                                             Grid.Row="1" Grid.Column="1" 
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="Nhập số tiền..." 
                                             materialDesign:TextFieldAssist.SuffixText="VNĐ"
                                             Height="52" 
                                             Padding="12,0"
                                             VerticalContentAlignment="Center"
                                             Margin="0,0,0,20"/>

                                    <!-- Row 3: Khác (Tách thành 2 ô: Mô tả và Tiền) -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Khác:" 
               VerticalAlignment="Center" FontWeight="SemiBold"/>

                                    <Grid Grid.Row="2" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="140"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Ô nhập mô tả -->
                                        <TextBox x:Name="txtMoTaKhac" 
                                                 Grid.Column="0" 
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Mô tả chi phí..." 
                                                 Height="52" 
                                                 Padding="12,0"
                                                 VerticalContentAlignment="Center"
                                                 Margin="0,0,12,0"/>

                                        <!-- Ô nhập tiền -->
                                        <TextBox x:Name="txtChiPhiKhac" 
                                                 Grid.Column="1" 
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Số tiền" 
                                                 materialDesign:TextFieldAssist.SuffixText="VNĐ"
                                                 Height="52" 
                                                 Padding="12,0"
                                                 VerticalContentAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- RIGHT: Tổng cộng Card -->
                        <Border Grid.Column="2" Background="#E3F2FD" CornerRadius="8" BorderBrush="#BBDEFB" BorderThickness="1" Padding="24" VerticalAlignment="Top">
                            <StackPanel>
                                <TextBlock Text="TỔNG KẾT CHI PHÍ" FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" Margin="0,0,0,16" HorizontalAlignment="Center"/>

                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Tiền vật tư:" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <!-- Đã thêm x:Name cho Label Tổng tiền vật tư bên phải -->
                                    <TextBlock x:Name="lblTongVatTuRight" Text="0 VNĐ" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Chi phí khác:" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <!-- Đã thêm x:Name cho Label Tổng chi phí khác -->
                                    <TextBlock x:Name="lblTongChiPhiKhac" Text="0 VNĐ" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                </Grid>

                                <Separator Background="#90CAF9" Margin="0,8,0,16"/>

                                <Grid>
                                    <TextBlock Text="Tổng cộng:" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <!-- Đã thêm x:Name cho Label Tổng cộng cuối cùng -->
                                    <TextBlock x:Name="lblTongCongFinal" Text="0 VNĐ" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- SECTION 4: ACTIONS BUTTONS -->
                    <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,1,0,0" Padding="0,24,0,32">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                            <!-- Hủy bỏ -->
                            <Button Content="Hủy bỏ" Click="Button_HuyBo_Click" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    BorderBrush="{StaticResource BorderMediumBrush}" Foreground="{StaticResource TextSecondaryBrush}"
                                    Height="45" Width="120" Margin="0,0,16,0"/>

                            <!-- Lưu tạm -->
                            <Button Content="Lưu tạm"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{StaticResource PrimaryBlueBrush}" BorderBrush="{StaticResource PrimaryBlueBrush}"
                                    Height="45" Width="120" Margin="0,0,16,0"
                                    Foreground="White"
                                    Click="Button_LuuTam_Click"/>

                            <!-- Hoàn thành & Đóng phiếu -->
                            <Button Content="Hoàn thành &amp; Đóng phiếu"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#2E7D32" BorderBrush="#2E7D32"
                                    Height="45" Padding="24,0" FontWeight="Bold"
                                    Click="Button_HoanThanh_Click"
                                    Foreground="White">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                </Button.Effect>
                            </Button>

                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>