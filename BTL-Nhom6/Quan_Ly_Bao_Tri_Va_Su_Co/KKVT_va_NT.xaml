<Window x:Class="BTL_Nhom6.Quan_Ly_Bao_Tri_Va_Su_Co.KKVT_va_NT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Kê khai Vật tư &amp; Nghiệm thu" 
        Height="800" Width="1440"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="#111827"
        TextElement.FontSize="14"
        Background="#F3F4F6">

    <Window.Resources>
        <!-- COLOR PALETTE (TAILWIND STYLE) -->
        <SolidColorBrush x:Key="BgLight" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="BgDark" Color="#111827"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="PrimaryBlueHover" Color="#2563EB"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#16A34A"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="InputBg" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="HeaderBg" Color="#F9FAFB"/>

        <!-- STYLE: TEXTBOX -->
        <Style x:Key="TailwindTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- STYLE: COMBOBOX -->
        <Style x:Key="TailwindComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- STYLE HEADER -->
        <Style x:Key="DarkHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="#232E3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="16,0,12,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- STYLE: DATAGRID CELL -->
        <Style x:Key="TailwindCell" TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
            <Setter Property="Padding" Value="16,12,12,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="127*"/>
            <RowDefinition Height="273*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLBT" Grid.RowSpan="2"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource BgLight}" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý quy trình bảo trì" 
                     FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                     Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- TABS -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderGray}" BorderThickness="0,0,0,1" Margin="32,0,32,0">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý Yêu cầu Bảo trì" Style="{StaticResource TabButtonStyle}" Height="54" Margin="0" Click="Button_QLYCBT_Click"/>
                    <Button Content="Điều phối công việc" Style="{StaticResource TabButtonStyle}" Height="54" Margin="32,0,0,0" Click="Button_DieuPhoi_Click"/>
                    <Button Content="Cập nhật phiếu công việc" Style="{StaticResource TabButtonStyle}" Height="54" Margin="32,0,0,0" Click="Button_CapNhat_Click"/>
                    <!-- Active Tab -->
                    <Button Content="Kê khai vật tư &amp; Nghiệm thu" Style="{StaticResource ActiveTabButtonStyle}" Height="54" Margin="32,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- MAIN FORM SCROLL -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="32">
                <StackPanel>

                    <!-- SECTION 1: CHỌN PHIẾU -->
                    <Border Background="#F9FAFB" CornerRadius="8" BorderBrush="{StaticResource BorderGray}" BorderThickness="1" Padding="24" Margin="0,0,0,32">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Chọn Phiếu công việc" FontWeight="Medium" Foreground="{StaticResource TextDark}" Margin="0,0,0,8"/>
                                <ComboBox Style="{StaticResource TailwindComboBox}"
                                          materialDesign:HintAssist.Hint="-- Chọn phiếu công việc cần kê khai --"
                                          materialDesign:TextFieldAssist.DecorationVisibility="Collapsed">
                                    <ComboBoxItem Content="WO-2407-001 | Bảo dưỡng thang máy Schindler (High)"/>
                                    <ComboBoxItem Content="WO-2407-002 | Kiểm tra hệ thống PCCC Kho (Medium)"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,8">
                                <TextBlock Text="Thông tin tóm tắt:" Foreground="{StaticResource TextGray}" FontSize="13" Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#DBEAFE" CornerRadius="4" Padding="10,4" Margin="0,0,12,0">
                                        <TextBlock Text="Trạng thái: Đang thực hiện" Foreground="#1E40AF" FontSize="12" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="#F3F4F6" CornerRadius="4" Padding="10,4" BorderBrush="{StaticResource BorderGray}" BorderThickness="1">
                                        <TextBlock Text="KTV: Nguyễn Văn A" Foreground="#374151" FontSize="12" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- SECTION 2: DANH SÁCH VẬT TƯ -->
                    <StackPanel Margin="0,24,0,40">
                        <Border Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderGray}" BorderThickness="1" ClipToBounds="True">
                            <StackPanel>
                                <!-- HEADER -->
                                <Grid Margin="24,24,24,16">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="PackageVariant" Foreground="{StaticResource PrimaryBlue}" Width="28" Height="28" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Danh sách vật tư tiêu hao" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Nút Thêm vật tư -->
                                    <Button HorizontalAlignment="Right" 
                                            Background="{StaticResource PrimaryBlue}" 
                                            BorderThickness="0"
                                            Foreground="White" 
                                            Height="50" Padding="24,0" 
                                            materialDesign:ButtonAssist.CornerRadius="6">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="22" Height="22" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Thêm vật tư" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <!-- DATA GRID -->
                                <DataGrid x:Name="dgVatTu" 
                                          AutoGenerateColumns="False" 
                                          CanUserAddRows="False"
                                          SelectionMode="Single"
                                          Background="White"
                                          BorderThickness="0"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="Horizontal"
                                          HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                                          ColumnHeaderStyle="{StaticResource DarkHeader}"
                                          CellStyle="{StaticResource TailwindCell}"
                                          RowHeight="68">

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="TÊN VẬT TƯ" 
                                            Binding="{Binding TenVatTu}" 
                                            Width="3*" 
                                            IsReadOnly="True" 
                                            Foreground="{StaticResource TextDark}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                                        <DataGridTextColumn Header="ĐƠN VỊ" Binding="{Binding DonVi}" Width="0.8*" IsReadOnly="True" Foreground="{StaticResource TextGray}"/>

                                        <DataGridTemplateColumn Header="SỐ LƯỢNG" Width="1*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding SoLuong}" 
                                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                             BorderBrush="{StaticResource BorderGray}" BorderThickness="1"
                                                             materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6"
                                                             Height="44" Padding="12,10" VerticalContentAlignment="Center"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTextColumn Header="ĐƠN GIÁ (VNĐ)" Binding="{Binding DonGia}" Width="1.2*" IsReadOnly="True" Foreground="{StaticResource TextGray}"/>
                                        <DataGridTextColumn Header="THÀNH TIỀN" Binding="{Binding ThanhTien}" FontWeight="Bold" Width="1.2*" IsReadOnly="True" Foreground="{StaticResource TextDark}"/>

                                        <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}" Width="36" Height="36" Background="#FEF2F2" BorderBrush="Transparent">
                                                        <materialDesign:PackIcon Kind="Delete" Foreground="#DC2626" Width="20" Height="20"/>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Footer Table -->
                                <Border Background="#F9FAFB" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderGray}" Padding="24,20">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,130,0">
                                            <TextBlock Text="Tổng tiền vật tư:" Foreground="{StaticResource TextGray}" FontWeight="Medium" Margin="0,0,16,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="350,000 VNĐ" Foreground="{StaticResource TextDark}" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- SECTION 3: CHI PHÍ & TỔNG KẾT (Đã giảm Margin Bottom từ 48 xuống 20) -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: Chi phí khác -->
                        <StackPanel Grid.Column="0">
                            <Border Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderGray}" BorderThickness="1" Padding="32">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                        <materialDesign:PackIcon Kind="CashMultiple" Foreground="{StaticResource PrimaryBlue}" Width="28" Height="28" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Chi phí khác (Nếu có)" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Nhân công" VerticalAlignment="Center" Foreground="{StaticResource TextDark}" FontWeight="Medium" FontSize="15"/>
                                        <TextBox Grid.Column="1" Style="{StaticResource TailwindTextBox}"
                                                 materialDesign:HintAssist.Hint="0"
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                 materialDesign:TextFieldAssist.SuffixText="VNĐ"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Vận chuyển" VerticalAlignment="Center" Foreground="{StaticResource TextDark}" FontWeight="Medium" FontSize="15"/>
                                        <TextBox Grid.Column="1" Style="{StaticResource TailwindTextBox}"
                                                 materialDesign:HintAssist.Hint="0"
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                 materialDesign:TextFieldAssist.SuffixText="VNĐ"/>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Khác" VerticalAlignment="Center" Foreground="{StaticResource TextDark}" FontWeight="Medium" FontSize="15"/>
                                        <TextBox Grid.Column="1" Style="{StaticResource TailwindTextBox}"
                                                 materialDesign:HintAssist.Hint="Mô tả &amp; chi phí..."
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- RIGHT: Tổng cộng -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                            <Border Background="#EFF6FF" CornerRadius="8" BorderBrush="#DBEAFE" BorderThickness="1" Padding="32">
                                <StackPanel>
                                    <Grid Margin="0,0,0,16">
                                        <TextBlock Text="Tổng tiền vật tư:" Foreground="{StaticResource TextGray}" FontSize="15"/>
                                        <TextBlock Text="350,000 VNĐ" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" FontSize="15" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,16">
                                        <TextBlock Text="Tổng chi phí khác:" Foreground="{StaticResource TextGray}" FontSize="15"/>
                                        <TextBlock Text="0 VNĐ" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" FontSize="15" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <Border BorderBrush="#BFDBFE" BorderThickness="0,1,0,0" Margin="0,8,0,24"/>

                                    <Grid>
                                        <TextBlock Text="Tổng cộng:" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                                        <TextBlock Text="350,000 VNĐ" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- SECTION 4: ACTIONS (Đã giảm Padding Top từ 24 xuống 16) -->
                    <Border BorderBrush="{StaticResource BorderGray}" BorderThickness="0,1,0,0" Padding="0,16,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                            <!-- Hủy bỏ -->
                            <Button Background="White" Foreground="{StaticResource TextDark}"
                                    BorderBrush="{StaticResource BorderGray}" BorderThickness="1"
                                    Height="56" Padding="32,0" Margin="0,0,16,0"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Setter Property="materialDesign:RippleAssist.Feedback" Value="#F3F4F6"/>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="Hủy bỏ" FontWeight="Medium" VerticalAlignment="Center" FontSize="16"/>
                            </Button>

                            <!-- Lưu thông tin -->
                            <Button Content="Lưu thông tin"
                                    Background="{StaticResource PrimaryBlue}" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="56" Padding="32,0" Margin="0,0,16,0"
                                    FontWeight="Bold" FontSize="16"
                                    materialDesign:ButtonAssist.CornerRadius="8"/>

                            <!-- Đóng phiếu -->
                            <Button Content="Đóng phiếu"
                                    Background="{StaticResource SuccessGreen}" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="56" Padding="32,0"
                                    FontWeight="Bold" FontSize="16"
                                    materialDesign:ButtonAssist.CornerRadius="8"/>

                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>