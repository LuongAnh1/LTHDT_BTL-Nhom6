<Window x:Class="BTL_Nhom6.Quan_Ly_Bao_Tri_Va_Su_Co.QLYCBT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Quản lý quy trình bảo trì" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- 2. STYLE HEADER CỦA BẠN (Header màu tối, chữ trắng) -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <!-- Thêm Template để đảm bảo Material Design không ghi đè màu nền -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 3. STYLE CHO Ô DỮ LIỆU (Giữ lại để căn lề đẹp) -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                    Background="{TemplateBinding Background}" 
                    SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 4. STYLE NÚT HÀNH ĐỘNG (Của bạn) -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>

        <!-- Style Header DataGrid -->
        <Style x:Key="CustomDataGridColumnHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="#232E3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Style Cell -->
        <Style x:Key="CustomDataGridCell" TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLQTBT"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý quy trình bảo trì" 
                    FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                    Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- TABS NAVIGATION -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,10,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý yêu cầu bảo trì" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="0" Click="Button_QLYCBT_Click"/>
                    <Button Content="Điều phối công việc" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_DieuPhoi_Click"/>
                    <Button Content="Cập nhật phiếu công việc" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_CapNhat_Click"/>
                    <Button Content="Kê khai vật tư &amp; Nghiệm thu" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_NghiemThu_Click"/>
                </StackPanel>
            </Border>

            <!-- TABLE AREA -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOOLBAR -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 1. ComboBox Lọc (Thêm x:Name và SelectionChanged) -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                        <TextBlock Text="Filter" VerticalAlignment="Center" FontWeight="Medium" Margin="0,0,8,0"/>
                        <ComboBox x:Name="cboFilter" 
                  Width="180" Height="40" Padding="12,8" Background="White" 
                  Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                  SelectedIndex="0"
                  SelectionChanged="cboFilter_SelectionChanged">
                            <ComboBoxItem Content="Trạng thái"/>
                            <ComboBoxItem Content="Đang chờ xử lý"/>
                            <ComboBoxItem Content="Đang thực hiện"/>
                            <ComboBoxItem Content="Hoàn thành"/>
                            <ComboBoxItem Content="Từ chối"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- 2. TextBox Tìm kiếm (Thêm TextChanged để tìm ngay khi gõ) -->
                    <Border Grid.Column="1" Background="White" CornerRadius="4" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Width="300" Height="40">
                        <Grid>
                            <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="12,0,0,0" Width="20" Height="20"/>
                            <TextBox x:Name="txtSearch" 
                     BorderThickness="0" Padding="40,0,10,0" VerticalAlignment="Center" 
                     materialDesign:HintAssist.Hint="Tìm kiếm yêu cầu..."
                     TextChanged="txtSearch_TextChanged"/>
                        </Grid>
                    </Border>

                    <!-- 3. Nút Tạo mới (Thêm Click) -->
                    <Button Grid.Column="3" Click="Button_TaoMoi_Click" 
            Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="40" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="20" Height="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Tạo yêu cầu mới" Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- DATA GRID CÓ THANH CUỘN -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" ClipToBounds="True">
                    <DataGrid x:Name="dgYeuCauBaoTri" 
                              Grid.Row="1"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                              Background="White"
                              BorderThickness="1"
                              BorderBrush="{StaticResource BorderLightBrush}"
                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                              RowHeight="55"
                              FontSize="14"
                              VerticalScrollBarVisibility="Auto">

                        <DataGrid.Columns>
                            <!-- 1. Mức ưu tiên -->
                            <DataGridTemplateColumn Header="MỨC ƯU TIÊN" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="10,2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding MucUuTien}" Value="High">
                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding MucUuTien}" Value="Medium">
                                                            <Setter Property="Background" Value="#FEF3C7"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding MucUuTien}" Value="Low">
                                                            <Setter Property="Background" Value="#DCFCE7"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding MucUuTien}" FontSize="12" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MucUuTien}" Value="High">
                                                                <Setter Property="Foreground" Value="#991B1B"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding MucUuTien}" Value="Medium">
                                                                <Setter Property="Foreground" Value="#92400E"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding MucUuTien}" Value="Low">
                                                                <Setter Property="Foreground" Value="#166534"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- 2. Thiết bị -->
                            <DataGridTextColumn Header="THIẾT BỊ" Binding="{Binding ThietBi}" Width="200" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- 3. Mã thiết bị -->
                            <DataGridTextColumn Header="MÃ TB" Binding="{Binding MaThietBi}" Width="100" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- 4. Mô tả lỗi -->
                            <DataGridTextColumn Header="MÔ TẢ LỖI" Binding="{Binding MoTaLoi}" Width="250" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- 5. Trạng thái -->
                            <DataGridTemplateColumn Header="TRẠNG THÁI" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="10,2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TrangThai}" Value="Hoàn thành">
                                                            <Setter Property="Background" Value="#DCFCE7"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TrangThai}" Value="Đang thực hiện">
                                                            <Setter Property="Background" Value="#DBEAFE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TrangThai}" Value="Đang chờ xử lý">
                                                            <Setter Property="Background" Value="#E5E7EB"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TrangThai}" Value="Từ chối">
                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding TrangThai}" FontSize="12" FontWeight="Medium">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Hoàn thành">
                                                                <Setter Property="Foreground" Value="#166534"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Đang thực hiện">
                                                                <Setter Property="Foreground" Value="#1E40AF"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Đang chờ xử lý">
                                                                <Setter Property="Foreground" Value="#374151"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- 6. Người yêu cầu -->
                            <DataGridTextColumn Header="NGƯỜI YÊU CẦU" Binding="{Binding NguoiYeuCau}" Width="180"/>

                            <!-- 7. Người xử lý -->
                            <DataGridTextColumn Header="NGƯỜI XỬ LÝ" Binding="{Binding NguoiXuLy}" Width="180"/>

                            <!-- 8. Ngày yêu cầu -->
                            <DataGridTextColumn Header="NGÀY YÊU CẦU" Binding="{Binding NgayYeuCau}" Width="160"/>

                            <!-- 9. Ngày hoàn tất -->
                            <DataGridTextColumn Header="NGÀY HOÀN TẤT" Binding="{Binding NgayHoanTat}" Width="160"/>

                            <!-- 10. Ghi chú -->
                            <DataGridTextColumn Header="GHI CHÚ" Binding="{Binding GhiChu}" Width="250" Foreground="{StaticResource TextSecondaryBrush}"/>

                            <!-- 11. Hành động -->
                            <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                                            <!-- ĐÃ XÓA NÚT SỬA (PENCIL) Ở ĐÂY -->

                                            <!-- Chỉ giữ lại nút Xóa -->
                                            <Button Style="{StaticResource IconActionButton}" 
                        ToolTip="Xóa yêu cầu" 
                        Click="Button_Delete_Click">
                                                <!-- Đổi màu đỏ cho dễ nhìn -->
                                                <materialDesign:PackIcon Kind="Delete" Foreground="Red" Width="18" Height="18"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>