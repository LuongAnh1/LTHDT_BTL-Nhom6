<Window x:Class="BTL_Nhom6.Quan_Ly_Bao_Tri_Va_Su_Co.CNPCV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Điều phối công việc" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- ========================================================= -->
        <!-- COPY RESOURCES TỪ LKH_va_DP ĐỂ ĐỒNG BỘ STYLE -->
        <!-- ========================================================= -->

        <!-- 1. Style Header của Bảng -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="45"/>
        </Style>

        <!-- 2. Style cho Cell (Padding chuẩn, không viền) -->
        <Style x:Key="CustomDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 3. Style Nút hành động nhỏ -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLQTBT" Loaded="SidebarMenu_Loaded"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý quy trình bảo trì" 
                   FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                   Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- TABS NAVIGATION -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,10,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý yêu cầu bảo trì" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="0" Click="Button_QLYCBT_Click"/>
                    <Button Content="Điều phối công việc" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_DieuPhoi_Click"/>
                    <Button Content="Cập nhật phiếu công việc" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="32,0,0,0"/>
                    <Button Content="Kê khai vật tư &amp; Nghiệm thu" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_NghiemThu_Click"/>
                </StackPanel>
            </Border>

            <!-- MAIN AREA -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Toolbar -->
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                </Grid.RowDefinitions>

                <!-- TOOLBAR -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="4" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Height="40">
                        <Grid>
                            <materialDesign:PackIcon Kind="Search" Foreground="Gray" VerticalAlignment="Center" Margin="12,0,0,0" Width="20" Height="20"/>
                            <TextBox x:Name="txtSearchKTV" 
                                     BorderThickness="0" 
                                     Padding="40,0,10,0" 
                                     VerticalAlignment="Center" 
                                     materialDesign:HintAssist.Hint="Tìm kiếm theo tên hoặc mã KTV"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                     TextChanged="TxtSearchKTV_TextChanged"/>
                        </Grid>
                    </Border>

                    <TextBlock Grid.Column="2" Text="Lọc theo trạng thái:" VerticalAlignment="Center" Margin="0,0,12,0" Foreground="Gray"/>

                    <ComboBox x:Name="cboTrangThai" 
          Grid.Column="3" 
          Height="40" 
          VerticalContentAlignment="Center"
          Padding="12,0"
          materialDesign:TextFieldAssist.HasClearButton="True" 
          Style="{StaticResource MaterialDesignOutlinedComboBox}" 
          Background="White"
          SelectionChanged="CboTrangThai_SelectionChanged">

                        <!-- Các Item giữ nguyên nội dung text để khớp với logic Code Behind -->
                        <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                        <ComboBoxItem Content="Đang hoạt động"/>
                        <!-- KTV đang làm việc (IsActive=True) -->
                        <ComboBoxItem Content="Đang bận"/>
                        <!-- KTV có việc > 0 -->
                        <ComboBoxItem Content="Nghỉ phép"/>
                        <!-- KTV đã nghỉ hoặc tạm khóa (IsActive=False) -->
                    </ComboBox>
                </Grid>

                <!-- DATA GRID (ĐÃ CẬP NHẬT STYLE GIỐNG ĐIỀU PHỐI) -->
                <DataGrid x:Name="dgKyThuatVien" Grid.Row="1"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          IsReadOnly="True"
                          
                          Background="White"
                          BorderThickness="1"
                          BorderBrush="{StaticResource BorderLightBrush}"
                          
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                          
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          CellStyle="{StaticResource CustomDataGridCell}"
                          RowHeight="55" 
                          FontSize="14"
                          
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">

                    <DataGrid.Columns>
                        <!-- Cột 1: Thông tin (Avatar + Tên) -->
                        <DataGridTemplateColumn Header="THÔNG TIN KỸ THUẬT VIÊN" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Avatar tròn -->
                                        <Border Width="36" Height="36" CornerRadius="18" Background="#E3F2FD">
                                            <TextBlock Text="{Binding Initials}" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                       FontWeight="Bold" Foreground="#1976D2" FontSize="12"/>
                                        </Border>
                                        <!-- Tên & Email -->
                                        <StackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                            <TextBlock Text="{Binding TenKTV}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Email}" FontSize="12" Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Cột 2: Mã NV -->
                        <DataGridTextColumn Header="MÃ NHÂN VIÊN" Binding="{Binding MaNV}" Width="150"/>

                        <!-- Cột 3: Chuyên môn -->
                        <DataGridTextColumn Header="CHUYÊN MÔN" Binding="{Binding ChuyenMon}" Width="200" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Cột 4: Công việc đang chờ (Badge đỏ) -->
                        <DataGridTemplateColumn Header="CÔNG VIỆC ĐANG CHỜ" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="10,2" HorizontalAlignment="Left" Background="#FEE2E2">
                                        <TextBlock Text="{Binding CongViecCho, StringFormat={}{0} Phiếu}" Foreground="#991B1B" FontSize="12" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Cột 5: Trạng thái (Chấm tròn màu) -->
                        <DataGridTemplateColumn Header="TRẠNG THÁI" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding TrangThai}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Cột 6: Hành động -->
                        <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                            Foreground="{StaticResource PrimaryBlueBrush}"
                                            Click="Button_XemCongViec_Click"
                                            Padding="8,0" Height="32">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Chi tiết" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                            <materialDesign:PackIcon Kind="ArrowRight" Margin="4,0,0,0" VerticalAlignment="Center" Width="16"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>