<Window x:Class="BTL_Nhom6.Quan_Ly_Bao_Tri_Va_Su_Co.ChonVatTuDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Chọn vật tư" Height="500" Width="600"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">

    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="KHO VẬT TƯ" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>

            <!-- Listbox hoặc Datagrid để chọn -->
            <DataGrid x:Name="dgKho" 
          Grid.Row="1" 
          AutoGenerateColumns="False" 
          CanUserAddRows="False" 
          SelectionMode="Single"
          
          IsReadOnly="True"          
          SelectionUnit="FullRow"    
          
          MouseDoubleClick="DgKho_MouseDoubleClick">
                <!-- (Tùy chọn) Thêm sự kiện click đúp để chọn nhanh -->

                <DataGrid.Columns>
                    <!-- Các cột giữ nguyên -->
                    <DataGridTextColumn Header="Tên vật tư" Binding="{Binding TenVatTu}" Width="*"/>
                    <DataGridTextColumn Header="Đơn vị" Binding="{Binding DonVi}" Width="100"/>
                    <DataGridTextColumn Header="Giá" Binding="{Binding DonGia, StringFormat={}{0:N0}}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Hủy" Click="BtnHuy_Click" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,10,0"/>
                <Button Content="Chọn" Click="BtnChon_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>