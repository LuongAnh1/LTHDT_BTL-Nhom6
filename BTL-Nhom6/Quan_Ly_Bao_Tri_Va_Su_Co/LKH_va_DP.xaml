<Window x:Class="BTL_Nhom6.Quan_Ly_Bao_Tri_Va_Su_Co.LKH_va_DP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Điều phối công việc" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- 1. Style Header của Bảng (Chuẩn theo QLND_va_PQ) -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="45"/>
        </Style>

        <!-- 2. Style cho Cell (Xóa viền đen, Padding chuẩn) -->
        <Style x:Key="CustomDataGridCell" TargetType="DataGridCell">
            <!-- GIẢM PADDING DỌC: Từ 12,12 thành 12,4 -->
            <Setter Property="Padding" Value="12,4"/>

            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        Background="{TemplateBinding Background}" 
                        SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 3. Style Nút hành động nhỏ -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLQTBT"/>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Điều phối &amp; Lên lịch bảo trì" 
                     FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                     Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- TABS -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,10,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý yêu cầu bảo trì" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="0" Click="Button_QLYCBT_Click"/>
                    <Button Content="Điều phối công việc" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="32,0,0,0"/>
                    <Button Content="Cập nhật phiếu công việc" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_CapNhat_Click"/>
                    <Button Content="Kê khai vật tư &amp; Nghiệm thu" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_NghiemThu_Click"/>
                </StackPanel>
            </Border>

            <!-- CONTENT CHIA 2 BẢNG -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <!-- Bảng 1: Sự cố (Requests) -->
                    <RowDefinition Height="*"/>
                    <!-- Khoảng cách -->
                    <RowDefinition Height="24"/>
                    <!-- Bảng 2: Định kỳ (Schedules) -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ========================================== -->
                <!-- BẢNG 1: SỰ CỐ BẤT NGỜ (MaintenanceRequests) -->
                <!-- ========================================== -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="#FEE2E2" CornerRadius="4" Padding="8,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AlertCircle" Foreground="#DC2626" VerticalAlignment="Center" Width="20" Height="20"/>
                                <TextBlock Text="SỰ CỐ CẦN XỬ LÝ (REQUESTS)" FontWeight="Bold" Margin="8,0,0,0" Foreground="#DC2626" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- DataGrid dgSuCo -->
                    <DataGrid x:Name="dgSuCo" Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              CanUserAddRows="False"
                              HeadersVisibility="Column" 
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                              
                              Background="White" 
                              BorderThickness="1"
                              BorderBrush="{StaticResource BorderLightBrush}"
                              
                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                              CellStyle="{StaticResource CustomDataGridCell}"
                              RowHeight="55" 
                              FontSize="14"
                              VerticalScrollBarVisibility="Auto"
                              
                              CanUserResizeColumns="False"
                              CanUserReorderColumns="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="MÃ TB" Binding="{Binding DeviceCode}" Width="100"/>
                            <DataGridTextColumn Header="THIẾT BỊ" Binding="{Binding DeviceName}" Width="200" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                            <DataGridTextColumn Header="MÔ TẢ LỖI" Binding="{Binding ProblemDescription}" Width="*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- Cột Mức ưu tiên (Badge đẹp) -->
                            <DataGridTemplateColumn Header="MỨC ĐỘ" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="10,2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Priority}" Value="High">
                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Priority}" Value="Medium">
                                                            <Setter Property="Background" Value="#FEF3C7"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Priority}" Value="Low">
                                                            <Setter Property="Background" Value="#DCFCE7"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Priority}" Value="Critical">
                                                            <Setter Property="Background" Value="#991B1B"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Priority}" FontSize="12" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Priority}" Value="High">
                                                                <Setter Property="Foreground" Value="#991B1B"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Medium">
                                                                <Setter Property="Foreground" Value="#92400E"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Low">
                                                                <Setter Property="Foreground" Value="#166534"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Critical">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="NGÀY BÁO" Binding="{Binding RequestDate, StringFormat=dd/MM/yyyy}" Width="120"/>

                            <!-- Nút Phân công -->
                            <DataGridTemplateColumn Header="TÁC VỤ" Width="Auto" MinWidth="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <!-- 
                Thay đổi:
                1. Foreground="White": Để chữ và Icon màu trắng
                2. Style: Đổi sang MaterialDesignRaisedButton để màu nền đậm và chữ trắng nổi bật
                3. Background: Ép màu xanh (nếu cần thiết, hoặc để mặc định theo theme)
            -->
                                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#2196F3"
                    BorderBrush="#2196F3"
                    Foreground="White"
                    Height="32" 
                    Padding="10,0" 
                    Margin="5,0"
                    HorizontalAlignment="Center"
                    Click="BtnPhanCongSuCo_Click" 
                    ToolTip="Tạo phiếu công việc">

                                            <StackPanel Orientation="Horizontal">
                                                <!-- Icon cũng sẽ tự ăn theo màu Foreground="White" của Button -->
                                                <materialDesign:PackIcon Kind="AccountHardHat" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="Phân công" FontSize="12" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- ========================================== -->
                <!-- BẢNG 2: BẢO TRÌ ĐỊNH KỲ (MaintenanceSchedules) -->
                <!-- ========================================== -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="#E0F2F1" CornerRadius="4" Padding="8,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarCheck" Foreground="#00695C" VerticalAlignment="Center" Width="20" Height="20"/>
                                <TextBlock Text="LỊCH BẢO TRÌ ĐẾN HẠN (SCHEDULES)" FontWeight="Bold" Margin="8,0,0,0" Foreground="#00695C" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- DataGrid dgDinhKy -->
                    <DataGrid x:Name="dgDinhKy" Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              CanUserAddRows="False"
                              HeadersVisibility="Column" 
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                              
                              Background="White" 
                              BorderThickness="1"
                              BorderBrush="{StaticResource BorderLightBrush}"
                              
                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                              CellStyle="{StaticResource CustomDataGridCell}"
                              RowHeight="55" 
                              FontSize="14"
                              VerticalScrollBarVisibility="Auto"
                              
                              CanUserResizeColumns="False"
                              CanUserReorderColumns="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="MÃ TB" Binding="{Binding DeviceCode}" Width="100"/>
                            <DataGridTextColumn Header="THIẾT BỊ" Binding="{Binding DeviceName}" Width="200" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                            <DataGridTextColumn Header="CÔNG VIỆC" Binding="{Binding TaskName}" Width="*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                            <DataGridTextColumn Header="CHU KỲ" Binding="{Binding FrequencyDays, StringFormat={}{0} ngày}" Width="100"/>

                            <!-- Ngày đến hạn (Highlight đỏ) -->
                            <DataGridTemplateColumn Header="HẠN CHÓT" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding NextMaintenanceDate, StringFormat=dd/MM/yyyy}" 
                                                   FontWeight="Bold" Foreground="#D32F2F" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Nút Thực hiện -->
                            <DataGridTemplateColumn Header="TÁC VỤ" Width="Auto" MinWidth="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <!-- 1. NÚT THỰC HIỆN -->
                                            <!-- Mặc định là HIỆN. Nếu IsProcessing = True thì ẨN -->
                                            <Button Height="32" Padding="10,0" Margin="5,0"
                        HorizontalAlignment="Center"
                        BorderBrush="#00695C" Foreground="#00695C"
                        Click="BtnThucHienDinhKy_Click" 
                        ToolTip="Lên lịch thực hiện ngay">

                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="PlayBoxOutline" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Thực hiện" FontSize="12" FontWeight="Bold"/>
                                                </StackPanel>

                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                                        <!-- Mặc định hiện -->
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <!-- Trigger: Nếu IsProcessing = True (Đang có người làm) -> Ẩn nút đi -->
                                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <!-- 2. THÔNG BÁO NGƯỜI ĐANG LÀM -->
                                            <!-- Mặc định là ẨN. Nếu IsProcessing = True thì HIỆN -->
                                            <Border Background="#FFF3E0" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding TechnicianName, StringFormat='Đang làm: {0}'}" 
                               FontSize="12" Foreground="#E65100" FontWeight="Bold"/>

                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <!-- Mặc định ẩn -->
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <!-- Trigger: Nếu IsProcessing = True -> Hiện thông báo lên -->
                                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>