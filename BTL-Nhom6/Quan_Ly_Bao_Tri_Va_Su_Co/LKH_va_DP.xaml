<Window x:Class="BTL_Nhom6.Quan_Ly_Bao_Tri_Va_Su_Co.LKH_va_DP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Điều phối công việc" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- Style cho Header DataGrid -->
        <Style x:Key="CustomDataGridColumnHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="#232E3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Style cho Cell -->
        <Style x:Key="CustomDataGridCell" TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLQTBT"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Data Grid -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý quy trình bảo trì" 
                     FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                     Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- TABS NAVIGATION -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,10,32,24">
                <StackPanel Orientation="Horizontal">
                    <!-- Tab 1 -->
                    <Button Content="Quản lý Yêu cầu Bảo trì" 
                            Style="{StaticResource TabButtonStyle}" 
                            Padding="0,8" Margin="0" 
                            Click="Button_QLYCBT_Click"/>

                    <!-- Tab 2: Active -->
                    <Button Content="Điều phối công việc" 
                            Style="{StaticResource ActiveTabButtonStyle}" 
                            Padding="0,8" Margin="32,0,0,0" 
                            Click="Button_DieuPhoi_Click"/>

                    <!-- Tab 3 -->
                    <Button Content="Cập nhật phiếu công việc" 
                            Style="{StaticResource TabButtonStyle}" 
                            Padding="0,8" Margin="32,0,0,0" 
                            Click="Button_CapNhat_Click"/>

                    <!-- Tab 4 -->
                    <Button Content="Kê khai vật tư &amp; Nghiệm thu" 
                            Style="{StaticResource TabButtonStyle}" 
                            Padding="0,8" Margin="32,0,0,0" 
                            Click="Button_NghiemThu_Click"/>
                </StackPanel>
            </Border>

            <!-- TABLE AREA -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOOLBAR -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Search -->
                        <ColumnDefinition Width="*"/>
                        <!-- Spacer -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Add Button -->
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Border Grid.Column="0" Background="White" CornerRadius="4" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Width="350" Height="40">
                        <Grid>
                            <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="12,0,0,0" Width="20" Height="20"/>
                            <TextBox x:Name="txtSearch" 
                                     BorderThickness="0" 
                                     Padding="40,0,10,0" 
                                     VerticalAlignment="Center" 
                                     VerticalContentAlignment="Center"
                                     materialDesign:HintAssist.Hint="Tìm kiếm công việc..."
                                     materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                     FontSize="14"/>
                        </Grid>
                    </Border>

                    <!-- Add Button -->
                    <Button Grid.Column="2" 
                            Background="{StaticResource PrimaryBlueBrush}" 
                            BorderThickness="0" 
                            Height="40" 
                            Padding="16,0" 
                            materialDesign:ButtonAssist.CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="20" Height="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Tạo phân công mới" Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- DATA GRID -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" ClipToBounds="True">
                    <DataGrid x:Name="dgDieuPhoi" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              CanUserResizeColumns="True"
                              SelectionMode="Single"
                              Background="White"
                              BorderThickness="0"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                              ColumnHeaderStyle="{StaticResource CustomDataGridColumnHeader}"
                              CellStyle="{StaticResource CustomDataGridCell}"
                              RowStyle="{StaticResource MaterialDesignDataGridRow}">

                        <DataGrid.Columns>
                            <!-- 1. Mã thiết bị -->
                            <DataGridTextColumn Header="MÃ THIẾT BỊ" Binding="{Binding MaThietBi}" Width="150" FontWeight="Medium" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- 2. Tên thiết bị -->
                            <DataGridTextColumn Header="TÊN THIẾT BỊ" Binding="{Binding TenThietBi}" Width="2*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- 3. Mô tả lỗi -->
                            <DataGridTextColumn Header="MÔ TẢ LỖI" Binding="{Binding MoTaLoi}" Width="2*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- 4. Mức ưu tiên (Badge) -->
                            <DataGridTemplateColumn Header="MỨC ƯU TIÊN" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="10,2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding MucUuTien}" Value="High">
                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                            <!-- Red-100 -->
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding MucUuTien}" Value="Medium">
                                                            <Setter Property="Background" Value="#FEF3C7"/>
                                                            <!-- Yellow-100 -->
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding MucUuTien}" Value="Low">
                                                            <Setter Property="Background" Value="#DCFCE7"/>
                                                            <!-- Green-100 -->
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding MucUuTien}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MucUuTien}" Value="High">
                                                                <Setter Property="Foreground" Value="#991B1B"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding MucUuTien}" Value="Medium">
                                                                <Setter Property="Foreground" Value="#92400E"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding MucUuTien}" Value="Low">
                                                                <Setter Property="Foreground" Value="#166534"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- 5. Người yêu cầu -->
                            <DataGridTextColumn Header="NGƯỜI YÊU CẦU" Binding="{Binding NguoiYeuCau}" Width="150" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- 6. Ngày yêu cầu -->
                            <DataGridTextColumn Header="NGÀY YÊU CẦU" Binding="{Binding NgayYeuCau}" Width="130" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- 7. Hành động (Nút Phân công) -->
                            <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="160">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Background="{StaticResource PrimaryBlueBrush}" 
                                                BorderThickness="0" 
                                                Height="32" 
                                                Padding="12,0" 
                                                materialDesign:ButtonAssist.CornerRadius="4"
                                                ToolTip="Phân công nhân viên"
                                                Click="Button_PhanCong_Click">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="AccountMultiplePlus" Foreground="White" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="Phân công" Foreground="White" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>