<Application x:Class="BTL_Nhom6.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             ShutdownMode="OnLastWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 1. Cấu hình màu chủ đạo -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Lime" />
                <!-- 2. Dùng đường dẫn đúng cho bản 5.x -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ================================================== -->
            <!-- BẢNG MÀU DÙNG CHUNG (GLOBAL COLOR PALETTE)         -->
            <!-- ================================================== -->

            <!-- 1. Màu nền chính -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F0F2F5"/>
            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#2D3E50"/>
            <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FFFFFF"/>

            <!-- 2. Màu chữ (Text) -->
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1F2937"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7280"/>
            <SolidColorBrush x:Key="TextWhiteBrush" Color="#FFFFFF"/>

            <!-- 3. Màu nút bấm & Menu (Sidebar) -->
            <SolidColorBrush x:Key="MenuHoverBrush" Color="#3D5166"/>
            <SolidColorBrush x:Key="MenuActiveBrush" Color="#4A90E2"/>
            <SolidColorBrush x:Key="MenuActiveHoverBrush" Color="#357ABD"/>

            <!-- 4. Màu chủ đạo (Primary Action) -->
            <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#1E40AF"/>
            <SolidColorBrush x:Key="HighlightBlueBrush" Color="#2563EB"/>

            <!-- 5. Màu trạng thái & Icon -->
            <SolidColorBrush x:Key="EditIconBrush" Color="#3B82F6"/>
            <SolidColorBrush x:Key="DeleteIconBrush" Color="#EF4444"/>
            <SolidColorBrush x:Key="SuccessGreenBrush" Color="#16A34A"/>

            <!-- 6. Đường viền & Separator -->
            <SolidColorBrush x:Key="BorderLightBrush" Color="#E5E7EB"/>
            <SolidColorBrush x:Key="BorderMediumBrush" Color="#D1D5DB"/>
            <SolidColorBrush x:Key="SeparatorBrush" Color="#55FFFFFF"/>

            <!-- ===================== -->
            <!-- STYLE DÙNG CHUNG      -->
            <!-- ===================== -->

            <!-- 1. Style cho Nút Menu thường -->
            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="Height" Value="50"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Margin="0,2">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource MenuHoverBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 2. Style cho Nút Menu đang Active -->
            <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
                <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource MenuActiveHoverBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- 3. Style cho Tab Navigation -->
            <Style x:Key="TabButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="4,12"/>
                <Setter Property="Margin" Value="0,0,24,0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    Background="Transparent">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                <Setter Property="Foreground" Value="{StaticResource HighlightBlueBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource HighlightBlueBrush}"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <!-- 4. Style cho Badge (Trạng thái) -->
            <Style x:Key="StatusBadgeBorder" TargetType="Border">
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="10,2"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- 5. Style cho CheckBox -->
            <Style x:Key="IOSSwitchStyle" TargetType="CheckBox">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <Grid Width="44" Height="24">
                                <Border x:Name="Track" Background="{StaticResource BorderMediumBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderMediumBrush}" BorderThickness="1"/>
                                <Border x:Name="Thumb" Width="20" Height="20" Background="White" CornerRadius="10" HorizontalAlignment="Left" Margin="2,0">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3"/>
                                    </Border.Effect>
                                    <Border.RenderTransform>
                                        <TranslateTransform x:Name="DotTransform" X="0" Y="0"/>
                                    </Border.RenderTransform>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Track" Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                                    <!-- Dùng màu xanh chủ đạo -->
                                    <Setter TargetName="Track" Property="BorderThickness" Value="0"/>
                                    
                                </Trigger>
                                <EventTrigger RoutedEvent="Checked">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Thumb" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="20" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Thumb" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>