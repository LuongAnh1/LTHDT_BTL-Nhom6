<Window x:Class="BTL_Nhom6.Dang_Nhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BTL_Nhom6"
        mc:Ignorable="d"
        Title="Đăng Nhập" 
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <!-- Card chính bo tròn các góc -->
    <materialDesign:Card UniformCornerRadius="15" Background="White" Margin="10" 
                     materialDesign:ElevationAssist.Elevation="Dp8"> 
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <!-- Cột Trái (Xanh) rộng hơn chút -->
                <ColumnDefinition Width="1*"/>
                <!-- Cột Phải (Trắng) -->
            </Grid.ColumnDefinitions>

            <!-- PHẦN BÊN TRÁI: MÀU XANH -->
            <Border Grid.Column="0" CornerRadius="15,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#003399" Offset="0.0"/>
                        <!-- Xanh đậm -->
                        <GradientStop Color="#0055CC" Offset="1.0"/>
                        <!-- Xanh sáng -->
                    </LinearGradientBrush>
                </Border.Background>

                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo / Tiêu đề nhỏ góc trái -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                        <materialDesign:PackIcon Kind="CogOutline" Foreground="White" Width="25" Height="25" VerticalAlignment="Center"/>
                        <TextBlock Text="Bảo trì thiết bị" Foreground="White" FontSize="16" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Ảnh minh họa ở giữa (Thay Source bằng ảnh thật của bạn) -->
                    <Image Grid.Row="1" Source="https://cdn-icons-png.flaticon.com/512/2083/2083236.png" Margin="20" VerticalAlignment="Center"/>
                    <!-- Nếu chưa có ảnh, dùng tạm Icon này để demo -->
                    <!-- <materialDesign:PackIcon Kind="Factory" Grid.Row="1" Width="150" Height="150" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/> -->

                    <!-- Text Slogan bên dưới -->
                    <StackPanel Grid.Row="2" VerticalAlignment="Bottom" Margin="0,0,0,20">
                        <TextBlock Text="Quản lý bảo trì hiệu quả" Foreground="White" FontSize="22" FontWeight="Bold" TextWrapping="Wrap"/>
                        <TextBlock Text="Tối ưu hóa vòng đời tài sản của bạn." Foreground="#CCFFFFFF" FontSize="14" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- PHẦN BÊN PHẢI: FORM ĐĂNG NHẬP -->
            <Grid Grid.Column="1" Margin="40">
                <!-- Nút tắt (X) ở góc phải trên -->
                <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="-20,-20,-20,0"
                        Click="Button_Close_Click"
                        ToolTip="Đóng">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="Gray"/>
                </Button>

                <StackPanel VerticalAlignment="Center">
                    <!-- Tiêu đề -->
                    <TextBlock Text="Đăng nhập" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,0,0,30"/>

                    <!-- Tên đăng nhập -->
                    <TextBlock Text="Tên đăng nhập" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Nhập tên đăng nhập"
                             Height="45"
                             Padding="10,10"
                             BorderBrush="#DDD"
                             Margin="0,0,0,20"/>

                    <!-- Mật khẩu -->
                    <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>

                    <PasswordBox x:Name="txtPassword"
                         Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                         materialDesign:HintAssist.Hint="Nhập mật khẩu"
                         Height="45"
                         Padding="10,10"
                         BorderBrush="#DDD"
                         Margin="0,0,0,10"/>

                    <!-- Quên mật khẩu & Link -->
                    <Button Content="Quên mật khẩu?"
        HorizontalAlignment="Right"
        Margin="0,5,0,15"
        Background="Transparent"
        BorderThickness="0"
        Foreground="#0056D2"
        Cursor="Hand"
        Click="BtnQuenMatKhau_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <!-- Hiệu ứng khi di chuột (Optional) -->
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#003380"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>     

                    <!-- Nút Đăng nhập -->
                    <Button Content="Đăng nhập"
                        Foreground="White"
                        Height="50"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#0055CC"
                        BorderBrush="{x:Null}"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Click="Button_Login_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#0055CC" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
                        </Button.Effect>
                    </Button>

                </StackPanel>
            </Grid>
        </Grid>
    </materialDesign:Card>
</Window> 