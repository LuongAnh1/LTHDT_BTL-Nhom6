<Window x:Class="BTL_Nhom6.Quan_Ly_Thong_Tin_Danh_Muc.QLVTPB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Quản lý vị trí phòng ban" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- Style cho các nút hành động Edit/Delete -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTTDM"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thông tin danh mục" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. MAIN TABS -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <!-- Nút Vị trí phòng ban: Đổi thành Active và XÓA sự kiện Click -->
                    <Button Content="Quản lý vị trí phòng ban" 
                Style="{StaticResource ActiveTabButtonStyle}" 
                Padding="0,8" Margin="0"/>

                    <!-- Nút Loại thiết bị: Để TabButtonStyle bình thường và giữ Click để chuyển trang -->
                    <Button Content="Quản lý loại thiết bị &amp; Model" 
                Style="{StaticResource TabButtonStyle}" 
                Padding="0,8" Margin="32,0,0,0" 
                Click="Button_QLLTB_Click"/>

                    <Button Content="Nhà cung cấp &amp; Báo giá linh kiện" 
                Style="{StaticResource TabButtonStyle}" 
                Padding="0,8" Margin="32,0,0,0" 
                Click="Button_NCC_Click"/>

                    <!-- Nút Từ điển: Đổi về TabButtonStyle (nếu đây không phải trang từ điển) -->
                    <Button Content="Từ điển dữ liệu chung" 
                Style="{StaticResource TabButtonStyle}" 
                Padding="0,8" Margin="32,0,0,0" 
                Click="Button_TDDL_Click"/>
                </StackPanel>
            </Border>

            <!-- 3. TABLE CONTENT -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOOLBAR -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="MapMarkerOutline" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24"/>
                        <TextBlock Text="Vị trí &amp; Phòng ban" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>

                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="20,0,0,0" Width="160" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Barcode" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Mã phòng ban" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                            </Grid>
                        </Border>

                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="12,0,0,0" Width="250" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Tên vị trí phòng ban" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="36" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Thêm vị trí mới" Foreground="White" VerticalAlignment="Center" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- BẢNG DỮ LIỆU -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" ClipToBounds="True">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Header Bảng (Tỉ lệ cột chuẩn 140 - 2* - 2.5* - 1.5* - 120) -->
                            <Border Background="#232E3E" Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="MÃ VỊ TRÍ" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Column="1" Text="TÊN VỊ TRÍ" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Column="2" Text="MÔ TẢ" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Column="3" Text="VỊ TRÍ CHA" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Column="4" Text="HÀNH ĐỘNG" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Hàng 1: ROOT (Tòa nhà A) -->
                            <Border BorderBrush="{StaticResource AppBackgroundBrush}" BorderThickness="0,0,0,1" Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="TA" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Column="1" Text="Tòa nhà A" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="2" Text="Khu vực văn phòng chính" VerticalAlignment="Center" HorizontalAlignment="Left" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="3" Text="-" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource IconActionButton}">
                                            <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Foreground="{StaticResource HighlightBlueBrush}"/>
                                        </Button>
                                        <Button Style="{StaticResource IconActionButton}">
                                            <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Foreground="{StaticResource DeleteIconBrush}"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>