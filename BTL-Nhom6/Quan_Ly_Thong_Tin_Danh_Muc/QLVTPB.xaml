<Window x:Class="BTL_Nhom6.Quan_Ly_Thong_Tin_Danh_Muc.QLVTPB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Quản lý vị trí phòng ban" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>
        <!-- Style Header của Bảng -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTTDM"/>

        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thông tin danh mục" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <!-- Nút Vị trí phòng ban: Đổi thành Active và XÓA sự kiện Click -->
                    <Button Content="Quản lý vị trí phòng ban" 
                            Style="{StaticResource ActiveTabButtonStyle}" />

                    <!-- Nút Loại thiết bị: Để TabButtonStyle bình thường và giữ Click để chuyển trang -->
                    <Button Content="Quản lý loại thiết bị &amp; Model" 
                            Style="{StaticResource TabButtonStyle}"  
                            Click="Button_QLLTB_Click"/>

                    <Button Content="Nhà cung cấp &amp; Báo giá linh kiện" 
                            Style="{StaticResource TabButtonStyle}"  
                            Click="Button_NCC_Click"/>

                    <!-- Nút Từ điển: Đổi về TabButtonStyle (nếu đây không phải trang từ điển) -->
                    <Button Content="Từ điển dữ liệu chung" 
                            Style="{StaticResource TabButtonStyle}" 
                            Click="Button_TDDL_Click"/>
                </StackPanel>
            </Border>

            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOOLBAR - PHẦN ĐÃ SỬA CĂN GIỮA LOGO -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="MapMarkerOutline" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Vị trí &amp; Phòng ban" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>

                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="20,0,0,0" Width="160" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Barcode" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchCode"
                                         BorderThickness="0"
                                         Padding="32,6,10,6"
                                         VerticalAlignment="Center"
                                         materialDesign:HintAssist.Hint="Mã phòng ban"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         FontSize="13"
                                         TextChanged="Search_TextChanged"/>
                            </Grid>
                        </Border>

                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="12,0,0,0" Width="250" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchName"
                                         BorderThickness="0"
                                         Padding="32,6,10,6"
                                         VerticalAlignment="Center"
                                         materialDesign:HintAssist.Hint="Tên vị trí phòng ban"
                                         Style="{StaticResource MaterialDesignTextBox}"
                                         FontSize="13"
                                         TextChanged="Search_TextChanged"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <Button Click="BtnAdd_Click" HorizontalAlignment="Right" Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="36" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Thêm vị trí mới" Foreground="White" VerticalAlignment="Center" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- BẢNG DỮ LIỆU -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" 
                        BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" 
                        ClipToBounds="True">

                    <DataGrid Grid.Row="1" x:Name="dgLocations"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                              Background="White"
                              BorderThickness="1"
                              BorderBrush="{StaticResource BorderLightBrush}"
                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                              RowHeight="55"
                              FontSize="14"
                              VerticalScrollBarVisibility="Auto">

                        <!-- 1. STYLE CHO CELL (Để căn giữa nội dung & hiệu ứng chọn dòng) -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- Cột 1: Mã vị trí -->
                            <DataGridTextColumn Header="Mã" 
                            Binding="{Binding LocationID}" 
                            Width="80"
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- Cột 2: Tên vị trí (Quan trọng -> Width *) -->
                            <DataGridTextColumn Header="Tên vị trí / Phòng ban" 
                            Binding="{Binding LocationName}" 
                            Width="*"
                            FontWeight="Medium"
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- Cột 3: Mô tả (Cho phép rộng hơn chút) -->
                            <DataGridTextColumn Header="Mô tả" 
                            Binding="{Binding Description}" 
                            Width="1.5*" 
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- Cột 4: Vị trí cha -->
                            <DataGridTextColumn Header="Trực thuộc (Vị trí cha)" 
                            Binding="{Binding ParentLocationName}" 
                            Width="*"
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                            <!-- Cột 5: Hành động -->
                            <DataGridTemplateColumn Header="Hành động" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0">
                                            <!-- Nút Sửa -->
                                            <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    Width="32" Height="32" 
                                                    Foreground="{StaticResource EditIconBrush}"
                                                    ToolTip="Chỉnh sửa thông tin"
                                                    Click="BtnEdit_Click"
                                                    Tag="{Binding}">
                                                <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18"/>
                                            </Button>

                                            <!-- Khoảng cách giữa 2 nút -->
                                            <Border Width="8"/>

                                            <!-- Nút Xóa -->
                                            <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    Width="32" Height="32" 
                                                    Foreground="{StaticResource DeleteIconBrush}"
                                                    ToolTip="Xóa vị trí này"
                                                    Click="BtnDelete_Click"
                                                    Tag="{Binding}">
                                                <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>