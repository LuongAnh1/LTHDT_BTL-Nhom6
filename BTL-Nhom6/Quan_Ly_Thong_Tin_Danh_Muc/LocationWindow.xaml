<Window x:Class="BTL_Nhom6.Quan_Ly_Thong_Tin_Danh_Muc.LocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thông tin vị trí" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{StaticResource ContentBackgroundBrush}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowsTransparency="True">

    <!-- Thêm sự kiện MouseLeftButtonDown để kéo thả cửa sổ -->
    <Border CornerRadius="12" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" 
            Background="{StaticResource ContentBackgroundBrush}"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Direction="270"/>
        </Border.Effect>

        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Form -->
                <RowDefinition Height="Auto"/>
                <!-- Actions -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock x:Name="lblTitle" Text="THÊM VỊ TRÍ MỚI" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBlueBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Quản lý cấu trúc tòa nhà, phòng ban" 
                           FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- 2. FORM INPUT -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">

                <!-- Tên Vị trí -->
                <TextBox x:Name="txtLocationName"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Tên vị trí (Tòa nhà, Phòng...) (*)"
                         Height="50" Margin="0,0,0,16"
                         VerticalContentAlignment="Center"/>

                <!-- Vị trí cha (ComboBox) -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="cboParent"
                              Grid.Column="0"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Thuộc vị trí cha (Để trống nếu là Gốc)"
                              DisplayMemberPath="LocationName"
                              SelectedValuePath="LocationID"
                              Height="50" 
                              Padding="12,10"/>

                    <!-- Nút X nhỏ để xóa chọn vị trí cha -->
                    <Button Grid.Column="1" Style="{StaticResource MaterialDesignToolButton}" 
                            Margin="4,0,0,0" Click="BtnClearCombo_Click"
                            ToolTip="Xóa chọn vị trí cha">
                        <materialDesign:PackIcon Kind="Close" Opacity="0.5"/>
                    </Button>
                </Grid>

                <!-- Mô tả -->
                <TextBox x:Name="txtDescription"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Mô tả chi tiết"
                         Height="80" Margin="0,0,0,0"
                         VerticalContentAlignment="Top"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>
            </StackPanel>

            <!-- 3. ACTIONS BUTTONS -->
            <Grid Grid.Row="2" Margin="0,32,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Hủy bỏ" IsCancel="True" Click="BtnCancel_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        BorderBrush="{StaticResource BorderMediumBrush}"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        Height="45"/>

                <Button Grid.Column="1" Grid.ColumnSpan="2" x:Name="btnSave" Content="LƯU DỮ LIỆU" Click="BtnSave_Click"
                        Background="{StaticResource PrimaryBlueBrush}"
                        BorderBrush="{StaticResource PrimaryBlueBrush}"
                        Foreground="White"
                        Height="45"
                        FontWeight="Bold">
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>