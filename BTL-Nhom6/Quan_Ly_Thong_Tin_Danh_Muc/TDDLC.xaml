 <Window x:Class="BTL_Nhom6.Quan_Ly_Thong_Tin_Danh_Muc.TDDLC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Từ điển dữ liệu chung" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTTDM"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thông tin danh mục" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. MAIN TABS -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <!-- Nút đầu tiên luôn để Margin="0" -->
                    <Button Content="Quản lý vị trí phòng ban" Style="{StaticResource TabButtonStyle}"  Click="Button_QLVTPB_Click"/>

                    <!-- Các nút sau chỉ để Margin bên trái (ví dụ: 32) -->
                    <Button Content="Quản lý loại thiết bị &amp; Model" Style="{StaticResource TabButtonStyle}"  Click="Button_QLLTB_Click"/>

                    <Button Content="Nhà cung cấp &amp; Báo giá linh kiện" Style="{StaticResource TabButtonStyle}"  Click="Button_NCC_Click"/>

                    <Button Content="Từ điển dữ liệu chung" Style="{StaticResource ActiveTabButtonStyle}" />
                </StackPanel>
            </Border>

            <!-- 3. SUB TABS -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="32,0,32,20">
                <Button Content="Trạng thái thiết bị" Style="{StaticResource ActiveTabButtonStyle}" FontSize="13" Padding="0,8" Margin="0"/>
                <Button Content="Đơn vị tính" Style="{StaticResource TabButtonStyle}" FontSize="13" Padding="0,8" Margin="32,0,0,0" Click="Button_DonViTinh_Click"/>
                <Button Content="Các lỗi thường gặp" Style="{StaticResource TabButtonStyle}" FontSize="13" Padding="0,8" Margin="32,0,0,0" Click="Button_LoiThuongGap_Click"/>
            </StackPanel>

            <!-- 4. TABLE CONTENT -->
            <Grid Grid.Row="3" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TOOLBAR (ĐÃ SỬA) -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="BookOutline" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Danh sách trạng thái" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>

                        <!-- Tìm kiếm theo Mã -->
                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="24,0,0,0" Width="170" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Barcode" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchMa" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" 
                                         materialDesign:HintAssist.Hint="Mã trạng thái" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                            </Grid>
                        </Border>

                        <!-- Tìm kiếm theo Tên -->
                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="12,0,0,0" Width="200" Height="36">
                            <Grid>
                                <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                <TextBox x:Name="txtSearchTen" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" 
                                         materialDesign:HintAssist.Hint="Tên trạng thái" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="36" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Thêm mới" Foreground="White" VerticalAlignment="Center" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- BẢNG DỮ LIỆU -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" ClipToBounds="True">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Header Bảng -->
                            <Border Background="#232E3E" Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="MÃ TRẠNG THÁI" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="TÊN TRẠNG THÁI" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="2" Text="MÔ TẢ CHI TIẾT" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="3" Text="HÀNH ĐỘNG" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Hàng 1 -->
                            <Border BorderBrush="{StaticResource AppBackgroundBrush}" BorderThickness="0,0,0,1" Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="IN_USE" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Đang sử dụng" VerticalAlignment="Center" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="2" Text="Thiết bị đang được bàn giao cho nhân viên sử dụng" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource IconActionButton}">
                                            <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Foreground="{StaticResource HighlightBlueBrush}"/>
                                        </Button>
                                        <Button Style="{StaticResource IconActionButton}">
                                            <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Foreground="{StaticResource DeleteIconBrush}"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Hàng 2 -->
                            <Border BorderBrush="{StaticResource AppBackgroundBrush}" BorderThickness="0,0,0,1" Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="BROKEN" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Hỏng" VerticalAlignment="Center" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="2" Text="Thiết bị gặp sự cố kỹ thuật, đang chờ kiểm tra" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource IconActionButton}">
                                            <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Foreground="{StaticResource HighlightBlueBrush}"/>
                                        </Button>
                                        <Button Style="{StaticResource IconActionButton}">
                                            <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Foreground="{StaticResource DeleteIconBrush}"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>