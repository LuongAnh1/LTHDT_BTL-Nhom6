<Window x:Class="BTL_Nhom6.Quan_Ly_Thong_Tin_Danh_Muc.NCC_va_BGLK"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Quản lý Loại thiết bị &amp; Model" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- 2. STYLE HEADER CỦA BẠN (Header màu tối, chữ trắng) -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <!-- Thêm Template để đảm bảo Material Design không ghi đè màu nền -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 3. STYLE CHO Ô DỮ LIỆU (Giữ lại để căn lề đẹp) -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                    Background="{TemplateBinding Background}" 
                    SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 4. STYLE NÚT HÀNH ĐỘNG (Của bạn) -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>
        <!-- Style cho cột TextBlock trong DataGrid (Tự xuống dòng) -->
        <Style x:Key="MaterialDesignDataGridTextColumnStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="4,0" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTTDM"/>

        <!-- 2. MAIN CONTENT -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thông tin danh mục" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. MAIN TABS -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý vị trí phòng ban" Style="{StaticResource TabButtonStyle}" Click="Button_QLVTPB_Click"/>
                    <Button Content="Quản lý loại thiết bị &amp; Model" Style="{StaticResource TabButtonStyle}" Click="Button_QLLTB_Click"/>
                    <Button Content="Nhà cung cấp &amp; Báo giá linh kiện" Style="{StaticResource ActiveTabButtonStyle}"/>
                    <Button Content="Từ điển dữ liệu chung" Style="{StaticResource TabButtonStyle}" Click="Button_TDDL_Click"/>
                </StackPanel>
            </Border>

            <!-- 3. CONTENT AREA (Cuộn dọc toàn bộ nội dung) -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="32,0,32,32">
                <StackPanel>

                    <!-- ============================================== -->
                    <!-- PHẦN 1: DANH SÁCH NHÀ CUNG CẤP -->
                    <!-- ============================================== -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar NCC -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="TruckOutline" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24" VerticalAlignment="Center"/>
                                <TextBlock Text="Danh sách nhà cung cấp" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>

                                <!-- Search NCC -->
                                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="20,0,0,0" Width="250" Height="36">
                                    <Grid>
                                        <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                        <TextBox x:Name="txtSearchNCC" TextChanged="txtSearchNCC_TextChanged" BorderThickness="0" Padding="32,6,10,6" materialDesign:HintAssist.Hint="Tìm kiếm NCC..." Style="{StaticResource MaterialDesignTextBox}"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <Button x:Name="btnAddSupplier" Click="btnAddNewSupplier_Click" HorizontalAlignment="Right" Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="36" Padding="16,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Thêm NCC" Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- DataGrid NCC -->
                        <DataGrid x:Name="dgSuppliers" Grid.Row="1" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  IsReadOnly="True"
                                  SelectionMode="Single" 
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal" 
                                  HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  RowHeight="45" Background="White" BorderThickness="0,1,0,0">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                    <Setter Property="Background" Value="#232E3E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Height" Value="40"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="TÊN NHÀ CUNG CẤP" Binding="{Binding SupplierName}" Width="2*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                <DataGridTextColumn Header="ĐỊA CHỈ" Binding="{Binding Address}" Width="2.5*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                <DataGridTextColumn Header="LIÊN HỆ" Binding="{Binding Phone}" Width="1.5*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource IconActionButton}" Tag="{Binding SupplierID}" Click="btnEditSupplier_Click">
                                                    <materialDesign:PackIcon Kind="Pencil" Foreground="{StaticResource HighlightBlueBrush}"/>
                                                </Button>
                                                <Button Style="{StaticResource IconActionButton}" Tag="{Binding SupplierID}" Click="btnDeleteSupplier_Click">
                                                    <materialDesign:PackIcon Kind="Delete" Foreground="{StaticResource DeleteIconBrush}"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <!-- ============================================== -->
                    <!-- PHẦN 2: DANH SÁCH BÁO GIÁ LINH KIỆN (MỚI) -->
                    <!-- ============================================== -->
                    <!-- ============================================== -->
                    <!-- PHẦN 2: DANH SÁCH BÁO GIÁ (LINH KIỆN) -->
                    <!-- ============================================== -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar Báo Giá -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="FileDocumentMultipleOutline" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24" VerticalAlignment="Center"/>
                                <TextBlock Text="Danh sách Báo giá linh kiện" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>

                                <!-- Search Báo Giá -->
                                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Margin="20,0,0,0" Width="250" Height="36">
                                    <Grid>
                                        <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                        <TextBox x:Name="txtSearchQuote" TextChanged="txtSearchQuote_TextChanged" BorderThickness="0" Padding="32,6,10,6" materialDesign:HintAssist.Hint="Tìm linh kiện/giá..." Style="{StaticResource MaterialDesignTextBox}"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <Button x:Name="bntAddQote" HorizontalAlignment="Right" Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="36" Padding="16,0" Click="btnAddQuote_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Thêm báo giá" Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- DataGrid Báo Giá -->
                        <DataGrid x:Name="dgQuotes" Grid.Row="1" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  IsReadOnly="True"
                                  SelectionMode="Single" 
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal" 
                                  HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  RowHeight="45" Background="White" BorderThickness="0,1,0,0">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                    <Setter Property="Background" Value="#232E3E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Height" Value="40"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="TÊN LINH KIỆN" Binding="{Binding ModelName}" Width="2*" FontWeight="Medium" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                <DataGridTextColumn Header="NHÀ CUNG CẤP" Binding="{Binding SupplierName}" Width="2*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                                <!-- Cột Giá (Format tiền tệ) -->
                                <DataGridTextColumn Header="ĐƠN GIÁ (VNĐ)" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="1*" FontWeight="Bold">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Margin" Value="0,0,16,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="GHI CHÚ (NGÀY)" Binding="{Binding LastSupplyDate, StringFormat=dd/MM/yyyy}" Width="1*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                                <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                                                <!-- SỬA -->
                                                <Button Style="{StaticResource IconActionButton}"
                                                        Tag="{Binding}"
                                                        Click="btnEditQuote_Click">
                                                    <materialDesign:PackIcon Kind="Pencil"
                                                                                Foreground="{StaticResource HighlightBlueBrush}"/>
                                                </Button>

                                                <!-- XÓA -->
                                                <Button Style="{StaticResource IconActionButton}"
                                                        Tag="{Binding}"
                                                        Click="btnDeleteQuote_Click">
                                                    <materialDesign:PackIcon Kind="Delete"
                                                                                Foreground="{StaticResource DeleteIconBrush}"/>
                                                </Button>

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>