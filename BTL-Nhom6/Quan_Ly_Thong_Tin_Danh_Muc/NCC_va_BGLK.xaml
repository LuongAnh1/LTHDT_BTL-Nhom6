<Window x:Class="BTL_Nhom6.Quan_Ly_Thong_Tin_Danh_Muc.NCC_va_BGLK"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Nhà cung cấp &amp; Báo giá linh kiện" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <uc:SidebarMenu Grid.Column="0" CurrentItem="QLTTDM"/>

        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Text="Quản lý thông tin danh mục" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <uc:WindowControlBar />
            </Grid>

            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý vị trí phòng ban" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="0" Click="Button_QLVTPB_Click"/>
                    <Button Content="Quản lý loại thiết bị &amp; Model" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_QLLTB_Click"/>
                    <Button Content="Nhà cung cấp &amp; Báo giá linh kiện" Style="{StaticResource ActiveTabButtonStyle}" Padding="0,8" Margin="32,0,0,0"/>
                    <Button Content="Từ điển dữ liệu chung" Style="{StaticResource TabButtonStyle}" Padding="0,8" Margin="32,0,0,0" Click="Button_TDDL_Click"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,0,32,32">

                    <!-- SECTION 1: DANH SÁCH NHÀ CUNG CẤP -->
                    <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,32" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="TruckOutline" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24" VerticalAlignment="Center"/>
                                    <TextBlock Text="Danh sách Nhà cung cấp" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <!-- Ô tìm kiếm theo MÃ -->
                                    <Border Background="{StaticResource AppBackgroundBrush}" CornerRadius="8" Width="150" Height="36" Margin="0,0,10,0">
                                        <Grid>
                                            <materialDesign:PackIcon Kind="Barcode" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                            <TextBox x:Name="txtSearchMaNCC" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" 
                                                     materialDesign:HintAssist.Hint="Mã NCC" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                                        </Grid>
                                    </Border>
                                    <!-- Ô tìm kiếm theo TÊN -->
                                    <Border Background="{StaticResource AppBackgroundBrush}" CornerRadius="8" Width="220" Height="36" Margin="0,0,12,0">
                                        <Grid>
                                            <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                            <TextBox x:Name="txtSearchTenNCC" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" 
                                                     materialDesign:HintAssist.Hint="Tên nhà cung cấp" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                                        </Grid>
                                    </Border>
                                    <Button Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="36" Padding="12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Thêm nhà cung cấp" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <!-- Bảng dữ liệu Nhà cung cấp -->
                            <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="6" ClipToBounds="True">
                                <StackPanel>
                                    <Border Background="#232E3E" Padding="15,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="MÃ NCC" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="TÊN NHÀ CUNG CẤP" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="2" Text="ĐỊA CHỈ" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="3" Text="LIÊN HỆ" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="4" Text="HÀNH ĐỘNG" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    <Border BorderBrush="{StaticResource AppBackgroundBrush}" BorderThickness="0,0,0,1" Padding="15,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="NCC001" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="Công ty TNHH An Phát" FontWeight="Medium" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="123 Lê Lợi, Quận 1, TP.HCM" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="3" Text="0901234567" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource IconActionButton}">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Foreground="{StaticResource HighlightBlueBrush}"/>
                                                </Button>
                                                <Button Style="{StaticResource IconActionButton}">
                                                    <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Foreground="{StaticResource DeleteIconBrush}"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- SECTION 2: BÁO GIÁ LINH KIỆN -->
                    <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="ListBoxOutline" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24" VerticalAlignment="Center"/>
                                    <TextBlock Text="Danh sách Báo giá linh kiện" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <!-- Ô tìm kiếm theo MÃ LINH KIỆN -->
                                    <Border Background="{StaticResource AppBackgroundBrush}" CornerRadius="8" Width="150" Height="36" Margin="0,0,10,0">
                                        <Grid>
                                            <materialDesign:PackIcon Kind="Barcode" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                            <TextBox x:Name="txtSearchMaLK" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" 
                                                     materialDesign:HintAssist.Hint="Mã linh kiện" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                                        </Grid>
                                    </Border>
                                    <!-- Ô tìm kiếm theo TÊN LINH KIỆN -->
                                    <Border Background="{StaticResource AppBackgroundBrush}" CornerRadius="8" Width="220" Height="36" Margin="0,0,12,0">
                                        <Grid>
                                            <materialDesign:PackIcon Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" Width="16" Height="16"/>
                                            <TextBox x:Name="txtSearchTenLK" BorderThickness="0" Padding="32,6,10,6" VerticalAlignment="Center" 
                                                     materialDesign:HintAssist.Hint="Tên linh kiện" Style="{StaticResource MaterialDesignTextBox}" FontSize="13"/>
                                        </Grid>
                                    </Border>
                                    <Button Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="36" Padding="12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="18" Height="18" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Thêm báo giá mới" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="6" ClipToBounds="True">
                                <StackPanel>
                                    <!-- Header Bảng Báo giá -->
                                    <Border Background="#232E3E" Padding="15,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="MÃ LK" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="TÊN LINH KIỆN" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="2" Text="NHÀ CUNG CẤP" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="3" Text="TỒN" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="ĐƠN GIÁ" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="5" Text="ĐƠN VỊ" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="6" Text="HÀNH ĐỘNG" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>

                                    <!-- Dữ liệu mẫu Báo giá -->
                                    <Border BorderBrush="{StaticResource AppBackgroundBrush}" BorderThickness="0,0,0,1" Padding="15,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="RAM001" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="RAM DDR4 8GB Kingston" FontWeight="Medium" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="Công ty TNHH An Phát" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="50" Foreground="#22C55E" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="850,000" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="5" Text="Cái" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource IconActionButton}">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Foreground="{StaticResource HighlightBlueBrush}"/>
                                                </Button>
                                                <Button Style="{StaticResource IconActionButton}">
                                                    <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Foreground="{StaticResource DeleteIconBrush}"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>                     