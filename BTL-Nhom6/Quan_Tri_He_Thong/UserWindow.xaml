<Window x:Class="BTL_Nhom6.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thông tin người dùng" 
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{StaticResource ContentBackgroundBrush}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowsTransparency="True">

    <Border CornerRadius="12" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Background="{StaticResource ContentBackgroundBrush}">
        <!-- Thêm Effect bóng đổ cho đẹp -->
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Direction="270"/>
        </Border.Effect>

        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Form -->
                <RowDefinition Height="Auto"/>
                <!-- Actions -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock x:Name="lblTitle" Text="THÊM NGƯỜI DÙNG" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBlueBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Vui lòng nhập đầy đủ thông tin bên dưới" 
                           FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- 2. FORM INPUT -->
            <StackPanel Grid.Row="1">
                <!-- Username -->
                <TextBox x:Name="txtUsername"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Tên đăng nhập (*)"
                         Height="50" Margin="0,0,0,16"
                         VerticalContentAlignment="Center"/>

                <!-- Password -->
                <PasswordBox x:Name="txtPassword"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             materialDesign:HintAssist.Hint="Mật khẩu"
                             Height="50" Margin="0,0,0,4"
                             VerticalContentAlignment="Center"/>
                <TextBlock x:Name="lblPassHint" Text="Để trống nếu không muốn đổi mật khẩu" 
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" 
                           Margin="4,0,0,16" Visibility="Collapsed" FontStyle="Italic"/>
                <!-- Spacer nếu không hiện hint -->
                <Border x:Name="spacerPass" Height="12" Visibility="Visible"/>

                <!-- Fullname -->
                <TextBox x:Name="txtFullName"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Họ và tên đầy đủ"
                         Height="50" Margin="0,0,0,16"
                         VerticalContentAlignment="Center"/>

                <!-- Row: Phone & Email -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" x:Name="txtPhone"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Số điện thoại"
                             Height="50" VerticalContentAlignment="Center"/>

                    <TextBox Grid.Column="2" x:Name="txtEmail"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Email"
                             Height="50" VerticalContentAlignment="Center"/>
                </Grid>

                <!-- Role ComboBox -->
                <ComboBox x:Name="cboRoles"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="Chọn Vai trò (*)"
                          DisplayMemberPath="RoleName"
                          SelectedValuePath="RoleID"
                          Height="50" Margin="0,0,0,16"
                          Padding="12,10"/>

                <!-- Toggle Status -->
                <StackPanel Orientation="Horizontal" Margin="4,0,0,0">
                    <TextBlock Text="Trạng thái hoạt động" VerticalAlignment="Center" Margin="0,0,16,0" FontWeight="SemiBold"/>
                    <CheckBox x:Name="chkActive" IsChecked="True" 
                                Style="{StaticResource IOSSwitchStyle}" 
                                ToolTip="Bật để cho phép đăng nhập"/>
                </StackPanel>
            </StackPanel>

            <!-- 3. ACTIONS BUTTONS -->
            <Grid Grid.Row="2" Margin="0,32,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Hủy bỏ" IsCancel="True" Click="btnCancel_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        BorderBrush="{StaticResource BorderMediumBrush}"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        Height="45"/>

                <Button Grid.Column="1" Grid.ColumnSpan="2" x:Name="btnSave" Content="LƯU LẠI" Click="btnSave_Click"
                        Background="{StaticResource PrimaryBlueBrush}"
                        BorderBrush="{StaticResource PrimaryBlueBrush}"
                        Foreground="White"
                        Height="45"
                        FontWeight="Bold">
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>