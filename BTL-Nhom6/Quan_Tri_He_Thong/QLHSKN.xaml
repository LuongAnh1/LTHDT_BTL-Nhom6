<Window x:Class="BTL_Nhom6.Quan_Tri_He_Thong.QLHSKN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        
        mc:Ignorable="d"
        Title="Quản lý Hồ sơ Kỹ năng" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- Style cho Button hành động nhỏ (Edit/Delete) -->
        <!-- Style này chỉ dùng riêng cho trang này nên để ở Window.Resources là hợp lý -->
        <Style x:Key="IconActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <!-- Cột Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Cột Content -->
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QTHT"/>

        <!-- BẮT ĐẦU NỘI DUNG TRANG (BODY) -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Content Body -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER & WINDOW CONTROLS -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản trị hệ thống" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <!-- Control Buttons -->
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. TABS -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <!-- 1. Tab Quản lý người dùng -->
                    <Button x:Name="btnTabQLND" 
                Content="Quản lý Người dùng &amp; Phân quyền" 
                Style="{StaticResource TabButtonStyle}" Click="Button_QLND_va_PQ_Click"/>

                    <!-- 2. Tab Hồ sơ kỹ năng -->
                    <Button x:Name="btnTabSkill" 
                Content="Quản lý Hồ sơ Kỹ năng" 
                Style="{StaticResource ActiveTabButtonStyle}"/>

                    <!-- 3. Tab Thay đổi mật khẩu -->
                    <Button x:Name="btnTabProfile" 
                Content="Thay đổi Mật khẩu &amp; Thông tin cá nhân" 
                Style="{StaticResource TabButtonStyle}" 
                Click="Button_TDMK_va_TTCN_Click"/>

                    <!-- 4. Tab Nhật ký -->
                    <Button x:Name="btnTabLog" 
                Content="Nhật ký &amp; Sao lưu dữ liệu" 
                Style="{StaticResource TabButtonStyle}" 
                Click="Button_NK_va_SLDL_Click" Margin="0"/>
                </StackPanel>
            </Border>

            <!-- 3. CONTENT BODY (2 CỘT) -->
            <!-- 3. CONTENT BODY (2 CỘT) -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <!-- Cột Trái -->
                    <ColumnDefinition Width="32"/>
                    <!-- Gap -->
                    <ColumnDefinition Width="7*"/>
                    <!-- Cột Phải -->
                </Grid.ColumnDefinitions>

                <!-- === CỘT TRÁI: DANH SÁCH KỸ NĂNG === -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="*"/>
                        <!-- List -->
                    </Grid.RowDefinitions>

                    <!-- Header Cột Trái -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ClipboardList" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24"/>
                            <TextBlock Text="Danh sách kỹ năng" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0,0,0"/>
                        </StackPanel>
                        <Button x:Name="btnAddSkill" Click="BtnAddSkill_Click" HorizontalAlignment="Right" Background="{StaticResource PrimaryBlueBrush}" BorderThickness="0" Height="32" Padding="12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Thêm kỹ năng mới" Foreground="White" FontSize="12" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- SỬA LỖI 1: Thêm Grid.Row="1" vào ListView bên dưới -->
                    <ListView Grid.Row="1" Name="lvSkills" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource AppBackgroundBrush}" BorderThickness="0,0,0,1" Padding="12" Background="White">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <!-- Tăng tỉ lệ cột đầu lên một chút nếu cần -->
                                            <ColumnDefinition Width="1.8*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- CỘT 1: TÊN KỸ NĂNG -->
                                        <!-- Thêm Margin phải (10) để tạo khoảng cách -->
                                        <!-- Thêm TextTrimming để hiện dấu ... nếu quá dài -->
                                        <!-- Thêm ToolTip để khi rê chuột vào thì thấy tên đầy đủ -->
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding SkillName}" 
                                                   FontWeight="Medium" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis" 
                                                   Margin="0,0,10,0"
                                                   ToolTip="{Binding SkillName}"/>

                                        <!-- CỘT 2: MÔ TẢ -->
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Description}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   VerticalAlignment="Center"
                                                   ToolTip="{Binding Description}"/>

                                        <!-- CỘT 3: HÀNH ĐỘNG -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Style="{StaticResource IconActionButton}" Foreground="{StaticResource HighlightBlueBrush}" Click="BtnEditSkill_Click" Tag="{Binding SkillID}">
                                                <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18"/>
                                            </Button>
                                            <Button Style="{StaticResource IconActionButton}" Foreground="{StaticResource DeleteIconBrush}" Click="BtnDeleteSkill_Click" Tag="{Binding SkillID}">
                                                <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

                <!-- === CỘT PHẢI: GÁN KỸ NĂNG === -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header Cột Phải -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="AccountDetails" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24"/>
                                <TextBlock Text="Gán kỹ năng cho Kỹ thuật viên" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0,0,0"/>
                            </StackPanel>

                            <!-- Combobox Tìm kiếm KTV -->
                            <ComboBox x:Name="cboUsers" SelectionChanged="cboUsers_SelectionChanged"
                                      HorizontalAlignment="Right" Width="250"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:TextFieldAssist.LeadingIcon="AccountSearch"
                                      materialDesign:HintAssist.Hint="Chọn Kỹ thuật viên"
                                      Background="White" Height="40" Padding="8,6">
                            </ComboBox>
                        </Grid>
                    </StackPanel>

                    <!-- Form Gán Kỹ Năng -->
                    <Border Grid.Row="1" Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="8" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Header Table -->
                                <RowDefinition Height="*"/>
                                <!-- ListView (Cần giãn hết cỡ) -->
                                <RowDefinition Height="Auto"/>
                                <!-- Footer Button -->
                            </Grid.RowDefinitions>

                            <!-- Table Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="CHỌN" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="TÊN KỸ NĂNG" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                <TextBlock Grid.Column="2" Text="MỨC ĐỘ THÀNH THẠO" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            </Grid>

                            <!-- SỬA LỖI 2: Thêm Grid.Row="1" vào ListView bên dưới -->
                            <ListView Grid.Row="1" Name="lvTechSkills" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0,0,0,12"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Binding Opacity -->
                                        <Border Background="White" CornerRadius="6" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" Padding="12">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="False">
                                                            <Setter Property="Opacity" Value="0.6"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox Grid.Column="0" 
                                                          IsChecked="{Binding IsSelected}" 
                                                          HorizontalAlignment="Center"
                                                          IsEnabled="{Binding DataContext.IsAdminOrManager, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                                <TextBlock Grid.Column="1" Text="{Binding SkillName}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>

                                                <ComboBox Grid.Column="2" 
                                                          ItemsSource="{Binding LevelOptions}"
                                                          SelectedItem="{Binding Level}"
                                                          IsEnabled="{Binding DataContext.IsAdminOrManager, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                                                          Height="35" Padding="8,5" Background="{StaticResource AppBackgroundBrush}">
                                                </ComboBox>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Footer Button -->
                            <StackPanel Grid.Row="2" Margin="0,16,0,0">
                                <Separator Background="{StaticResource BorderLightBrush}" Margin="0,0,0,16"/>
                                <Button x:Name="btnSaveUserSkills" Click="BtnSaveUserSkills_Click" HorizontalAlignment="Right" Background="{StaticResource SuccessGreenBrush}" BorderThickness="0" Height="40" Width="140">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" Foreground="White" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Lưu kỹ năng" Foreground="White" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>