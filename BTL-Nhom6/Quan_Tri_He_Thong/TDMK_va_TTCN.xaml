<Window x:Class="BTL_Nhom6.Quan_Tri_He_Thong.TDMK_va_TTCN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Thay đổi Mật khẩu &amp; Thông tin cá nhân" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontSize="14"
        Background="#F0F2F5">

    <Window.Resources>
        <!-- 1. Style cho Nút Menu thường -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Margin="0,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D5166"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 2. Style cho Nút Menu đang Active -->
        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#4A90E2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 3. Style cho Tab Navigation -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="4,12"/>
            <Setter Property="Margin" Value="0,0,24,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#374151"/>
                                <Setter Property="BorderBrush" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Foreground" Value="#2563EB"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR === -->
        <Border Grid.Column="0" Background="#2D3E50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header Admin -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,30,20,30">
                    <materialDesign:PackIcon Kind="CogOutline" Width="30" Height="30" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Admin" Foreground="White" FontSize="20" FontWeight="Bold" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="#55FFFFFF" Margin="20,0"/>

                <!-- Menu List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,20,10,0">
                    <StackPanel>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Home_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Trang chủ" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ActiveMenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountMultiple" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản trị hệ thống" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Security" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Phân quyền &amp; Vai trò" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Devices" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý thiết bị" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarClock" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý quy trình bảo trì" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PackageVariant" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý kho" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBar" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Báo cáo &amp; Thống kê" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer User -->
                <StackPanel Grid.Row="2" Margin="10,0,10,20">
                    <Separator Background="#55FFFFFF" Margin="10,10,10,15"/>
                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountCircleOutline" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="admin" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Close_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Logout" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Đăng xuất" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- === MAIN CONTENT === -->
        <Grid Grid.Column="1" Background="#FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title Bar -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Content Area -->
            </Grid.RowDefinitions>

            <!-- 1. Title Bar (ĐÃ SỬA VỊ TRÍ) -->
            <Grid Grid.Row="0">
                <!-- TextBlock có Margin riêng để canh lề trái -->
                <TextBlock Text="Thay đổi Mật khẩu &amp; Thông tin cá nhân" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#1F2937" 
                           Margin="32,24,0,10" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                <!-- StackPanel nút điều khiển neo sát góc phải trên cùng -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,5,5,0">

                    <StackPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
                            <Setter Property="Width" Value="32"/>
                            <Setter Property="Height" Value="32"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="2,0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </StackPanel.Resources>

                    <!-- Nút Thu nhỏ -->
                    <Button ToolTip="Thu nhỏ" Click="Button_Minimize_Click">
                        <materialDesign:PackIcon Kind="Minus" Width="18" Height="18" Foreground="#555"/>
                    </Button>

                    <!-- Nút Phóng to -->
                    <Button x:Name="btnMaximize" ToolTip="Phóng to" Click="Button_Maximize_Click">
                        <materialDesign:PackIcon x:Name="iconMaximize" Kind="WindowMaximize" Width="16" Height="16" Foreground="#555"/>
                    </Button>

                    <!-- Nút Đóng -->
                    <Button ToolTip="Đóng" Click="Button_Close_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
                                <Setter Property="Width" Value="32"/>
                                <Setter Property="Height" Value="32"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="2,0,0,0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF4444"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <materialDesign:PackIcon Kind="Close" Width="18" Height="18" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 2. Tabs Navigation -->
            <Border Grid.Row="1" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý Người dùng &amp; Phân quyền" Style="{StaticResource TabButtonStyle}" Click="Button_QLND_va_PQ_Click"/>
                    <Button Content="Quản lý Hồ sơ Kỹ năng" Style="{StaticResource TabButtonStyle}" Click="Button_QLHSKN_Click"/>
                    <Button Content="Thay đổi Mật khẩu &amp; Thông tin cá nhân" Style="{StaticResource ActiveTabButtonStyle}"/>
                    <Button Content="Nhật ký &amp; Sao lưu dữ liệu" Style="{StaticResource TabButtonStyle}" Click="Button_NK_va_SLDL_Click" Margin="0"/>
                </StackPanel>
            </Border>

            <!-- 3. Form Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="32,0,32,32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- FORM TRÁI: THÔNG TIN CÁ NHÂN -->
                    <StackPanel Grid.Column="0">
                        <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,8" Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Account" Foreground="#2563EB" Width="24" Height="24"/>
                                <TextBlock Text="Thông tin cá nhân" FontSize="18" FontWeight="Bold" Foreground="#1F2937" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#F9FAFB" BorderBrush="#F3F4F6" BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel>
                                <TextBlock Text="Tên đăng nhập" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <TextBox Text="admin_user" IsReadOnly="True" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="AccountCircle"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="#F3F4F6" BorderBrush="#D1D5DB"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Họ và tên" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <TextBox Text="Nguyễn Văn A" IsReadOnly="True" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="BadgeAccountHorizontal"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="#F3F4F6" BorderBrush="#D1D5DB"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Vai trò" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <TextBox Text="Quản trị viên" IsReadOnly="True" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="ShieldAccount"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="#F3F4F6" BorderBrush="#D1D5DB"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <Separator Background="#E5E7EB" Margin="0,8,0,16"/>

                                <TextBlock Text="SĐT" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtPhone" Text="0901234567"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="Phone"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="White" BorderBrush="#D1D5DB"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Email" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtEmail" Text="admin.a@company.com"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="Email"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="White" BorderBrush="#D1D5DB"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,24"/>

                                <Button HorizontalAlignment="Right" Background="#1E40AF" BorderBrush="{x:Null}" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" Foreground="White" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Lưu thông tin" Foreground="White" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- FORM PHẢI: ĐỔI MẬT KHẨU -->
                    <StackPanel Grid.Column="2">
                        <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,8" Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LockReset" Foreground="#2563EB" Width="24" Height="24"/>
                                <TextBlock Text="Thay đổi mật khẩu" FontSize="18" FontWeight="Bold" Foreground="#1F2937" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#F9FAFB" BorderBrush="#F3F4F6" BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel>
                                <TextBlock Text="Mật khẩu hiện tại" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="pbCurrentPass"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:TextFieldAssist.LeadingIcon="Lock"
                                             materialDesign:TextFieldAssist.LeadingIconSize="20"
                                             materialDesign:HintAssist.Hint="Nhập mật khẩu hiện tại"
                                             Background="White" BorderBrush="#D1D5DB"
                                             Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Mật khẩu mới" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="pbNewPass"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:TextFieldAssist.LeadingIcon="Key"
                                             materialDesign:TextFieldAssist.LeadingIconSize="20"
                                             materialDesign:HintAssist.Hint="Nhập mật khẩu mới"
                                             Background="White" BorderBrush="#D1D5DB"
                                             Height="45" VerticalContentAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số." 
                                           FontSize="12" Foreground="#6B7280" Margin="0,0,0,16"/>

                                <TextBlock Text="Xác nhận mật khẩu mới" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="pbConfirmPass"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:TextFieldAssist.LeadingIcon="CheckCircle"
                                             materialDesign:TextFieldAssist.LeadingIconSize="20"
                                             materialDesign:HintAssist.Hint="Nhập lại mật khẩu mới"
                                             Background="White" BorderBrush="#D1D5DB"
                                             Height="45" VerticalContentAlignment="Center" Margin="0,0,0,32"/>

                                <Button HorizontalAlignment="Right" Background="#16A34A" BorderBrush="{x:Null}" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Upload" Foreground="White" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Đổi mật khẩu" Foreground="White" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>