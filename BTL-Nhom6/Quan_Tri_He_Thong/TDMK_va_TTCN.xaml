<Window x:Class="BTL_Nhom6.Quan_Tri_He_Thong.TDMK_va_TTCN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        
        mc:Ignorable="d"
        Title="Thay đổi Mật khẩu &amp; Thông tin cá nhân" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- 1. Style cho Nút Menu thường -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Margin="0,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource MenuHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 2. Style cho Nút Menu đang Active -->
        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="{StaticResource MenuActiveBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource MenuActiveHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 3. Style cho Tab Navigation -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="4,12"/>
            <Setter Property="Margin" Value="0,0,24,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Foreground" Value="{StaticResource HighlightBlueBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource HighlightBlueBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR === -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header Admin -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,30,20,30">
                    <materialDesign:PackIcon Kind="CogOutline" Width="30" Height="30" Foreground="{StaticResource TextWhiteBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="Admin" Foreground="{StaticResource TextWhiteBrush}" FontSize="20" FontWeight="Bold" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="{StaticResource SeparatorBrush}" Margin="20,0"/>

                <!-- Menu List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,20,10,0">
                    <StackPanel>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Home_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Trang chủ" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ActiveMenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountMultiple" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản trị hệ thống" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Security" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Phân quyền &amp; Vai trò" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Devices" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý thiết bị" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarClock" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý quy trình bảo trì" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PackageVariant" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Quản lý kho" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBar" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Báo cáo &amp; Thống kê" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer User -->
                <StackPanel Grid.Row="2" Margin="10,0,10,20">
                    <Separator Background="{StaticResource SeparatorBrush}" Margin="10,10,10,15"/>
                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountCircleOutline" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="admin" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Logout_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Logout" Width="22" Height="22" VerticalAlignment="Center"/>
                            <TextBlock Text="Đăng xuất" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- === MAIN CONTENT === -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title Bar -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Content Area -->
            </Grid.RowDefinitions>

            <!-- 1. Title Bar -->
            <Grid Grid.Row="0">
                <TextBlock Text="Thay đổi Mật khẩu &amp; Thông tin cá nhân" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                <!-- StackPanel nút điều khiển -->
                <!-- Sử dụng UserControl tái sử dụng -->
                <uc:WindowControlBar />
            </Grid>

            <!-- 2. Tabs Navigation -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý Người dùng &amp; Phân quyền" Style="{StaticResource TabButtonStyle}" Click="Button_QLND_va_PQ_Click"/>
                    <Button Content="Quản lý Hồ sơ Kỹ năng" Style="{StaticResource TabButtonStyle}" Click="Button_QLHSKN_Click"/>
                    <Button Content="Thay đổi Mật khẩu &amp; Thông tin cá nhân" Style="{StaticResource ActiveTabButtonStyle}"/>
                    <Button Content="Nhật ký &amp; Sao lưu dữ liệu" Style="{StaticResource TabButtonStyle}" Click="Button_NK_va_SLDL_Click" Margin="0"/>
                </StackPanel>
            </Border>

            <!-- 3. Form Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="32,0,32,32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- FORM TRÁI: THÔNG TIN CÁ NHÂN -->
                    <StackPanel Grid.Column="0">
                        <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,8" Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Account" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24"/>
                                <TextBlock Text="Thông tin cá nhân" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel>
                                <TextBlock Text="Tên đăng nhập" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox Text="admin_user" IsReadOnly="True" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="AccountCircle"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Họ và tên" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox Text="Nguyễn Văn A" IsReadOnly="True" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="BadgeAccountHorizontal"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Vai trò" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox Text="Quản trị viên" IsReadOnly="True" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="ShieldAccount"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <Separator Background="{StaticResource BorderLightBrush}" Margin="0,8,0,16"/>

                                <TextBlock Text="SĐT" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtPhone" Text="0901234567"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="Phone"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="{StaticResource ContentBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Email" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtEmail" Text="admin.a@company.com"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="Email"
                                         materialDesign:TextFieldAssist.LeadingIconSize="20"
                                         Background="{StaticResource ContentBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,24"/>

                                <Button HorizontalAlignment="Right" Background="{StaticResource PrimaryBlueBrush}" BorderBrush="{x:Null}" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" Foreground="White" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Lưu thông tin" Foreground="White" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- FORM PHẢI: ĐỔI MẬT KHẨU -->
                    <StackPanel Grid.Column="2">
                        <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,8" Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LockReset" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24"/>
                                <TextBlock Text="Thay đổi mật khẩu" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel>
                                <TextBlock Text="Mật khẩu hiện tại" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="pbCurrentPass"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:TextFieldAssist.LeadingIcon="Lock"
                                             materialDesign:TextFieldAssist.LeadingIconSize="20"
                                             materialDesign:HintAssist.Hint="Nhập mật khẩu hiện tại"
                                             Background="{StaticResource ContentBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                             Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Mật khẩu mới" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="pbNewPass"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:TextFieldAssist.LeadingIcon="Key"
                                             materialDesign:TextFieldAssist.LeadingIconSize="20"
                                             materialDesign:HintAssist.Hint="Nhập mật khẩu mới"
                                             Background="{StaticResource ContentBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                             Height="45" VerticalContentAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số." 
                                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16"/>

                                <TextBlock Text="Xác nhận mật khẩu mới" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="pbConfirmPass"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:TextFieldAssist.LeadingIcon="CheckCircle"
                                             materialDesign:TextFieldAssist.LeadingIconSize="20"
                                             materialDesign:HintAssist.Hint="Nhập lại mật khẩu mới"
                                             Background="{StaticResource ContentBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                             Height="45" VerticalContentAlignment="Center" Margin="0,0,0,32"/>

                                <Button HorizontalAlignment="Right" Background="{StaticResource SuccessGreenBrush}" BorderBrush="{x:Null}" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Upload" Foreground="White" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Đổi mật khẩu" Foreground="White" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window> 