<Window x:Class="BTL_Nhom6.Quan_Tri_He_Thong.TDMK_va_TTCN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Thay đổi Mật khẩu &amp; Thông tin cá nhân" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <!-- Cột Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Cột Content -->
        </Grid.ColumnDefinitions>

        <!-- === 1. SIDEBAR === -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="QTHT"/>

        <!-- === 2. MAIN CONTENT AREA === -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title Bar -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs Navigation -->
                <RowDefinition Height="*"/>
                <!-- Content Body (ScrollViewer) -->
            </Grid.RowDefinitions>

            <!-- 2.1. Title Bar -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản trị hệ thống" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <!-- Nút điều khiển cửa sổ (Close, Max, Min) -->
                <uc:WindowControlBar />
            </Grid>

            <!-- 2.2. Tabs Navigation -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <!-- 1. Tab Quản lý người dùng -->
                    <Button x:Name="btnTabQLND" 
                            Content="Quản lý Người dùng &amp; Phân quyền" 
                            Style="{StaticResource TabButtonStyle}" Click="Button_QLND_va_PQ_Click"/>

                    <!-- 2. Tab Hồ sơ kỹ năng -->
                    <Button x:Name="btnTabSkill" 
                            Content="Quản lý Hồ sơ Kỹ năng" 
                            Style="{StaticResource TabButtonStyle}" 
                            Click="Button_QLHSKN_Click"/>

                    <!-- 3. Tab Thay đổi mật khẩu -->
                    <Button x:Name="btnTabProfile" 
                            Content="Thay đổi Mật khẩu &amp; Thông tin cá nhân" 
                            Style="{StaticResource ActiveTabButtonStyle}"/>

                    <!-- 4. Tab Nhật ký -->
                    <Button x:Name="btnTabLog" 
                            Content="Nhật ký &amp; Sao lưu dữ liệu" 
                            Style="{StaticResource TabButtonStyle}" 
                            Click="Button_NK_va_SLDL_Click" Margin="0"/>
                </StackPanel>
            </Border>

            <!-- 2.3. Form Content Body -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="32,0,32,32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="32"/>
                        <!-- Gap -->
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- CỘT TRÁI: THÔNG TIN CÁ NHÂN -->
                    <StackPanel Grid.Column="0">
                        <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,8" Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Account" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24"/>
                                <TextBlock Text="Thông tin cá nhân" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="White" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel>
                                <TextBlock Text="Tên đăng nhập" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtUsername" IsReadOnly="True" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="AccountCircle"
                                         Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Họ và tên" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtDisplayFullName" IsReadOnly="True" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="BadgeAccountHorizontal"
                                         Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Vai trò" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtRoleName" IsReadOnly="True" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="ShieldAccount"
                                         Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <Separator Background="{StaticResource BorderLightBrush}" Margin="0,8,0,16"/>

                                <TextBlock Text="SĐT" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtPhone" Text="0901234567"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="Phone"
                                         Background="White" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Email" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtEmail" Text="admin.a@company.com"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:TextFieldAssist.LeadingIcon="Email"
                                         Background="White" BorderBrush="{StaticResource BorderMediumBrush}"
                                         Height="45" VerticalContentAlignment="Center" Margin="0,0,0,24"/>

                                <Button Click="BtnSaveInfo_Click" HorizontalAlignment="Right" Background="{StaticResource PrimaryBlueBrush}" BorderBrush="{x:Null}" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" Foreground="White" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Lưu thông tin" Foreground="White" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- CỘT PHẢI: ĐỔI MẬT KHẨU -->
                    <StackPanel Grid.Column="2">
                        <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,8" Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LockReset" Foreground="{StaticResource HighlightBlueBrush}" Width="24" Height="24"/>
                                <TextBlock Text="Thay đổi mật khẩu" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="White" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel>
                                <TextBlock Text="Mật khẩu hiện tại" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="pbCurrentPass"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:TextFieldAssist.LeadingIcon="Lock"
                                             materialDesign:HintAssist.Hint="Nhập mật khẩu hiện tại"
                                             Background="White" BorderBrush="{StaticResource BorderMediumBrush}"
                                             Height="45" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                                <TextBlock Text="Mật khẩu mới" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="pbNewPass"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:TextFieldAssist.LeadingIcon="Key"
                                             materialDesign:HintAssist.Hint="Nhập mật khẩu mới"
                                             Background="White" BorderBrush="{StaticResource BorderMediumBrush}"
                                             Height="45" VerticalContentAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số." 
                                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16" TextWrapping="Wrap"/>

                                <TextBlock Text="Xác nhận mật khẩu mới" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="pbConfirmPass"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:TextFieldAssist.LeadingIcon="CheckCircle"
                                             materialDesign:HintAssist.Hint="Nhập lại mật khẩu mới"
                                             Background="White" BorderBrush="{StaticResource BorderMediumBrush}"
                                             Height="45" VerticalContentAlignment="Center" Margin="0,0,0,32"/>

                                <Button Click="BtnChangePass_Click" HorizontalAlignment="Right" Background="{StaticResource SuccessGreenBrush}" BorderBrush="{x:Null}" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Upload" Foreground="White" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Đổi mật khẩu" Foreground="White" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>