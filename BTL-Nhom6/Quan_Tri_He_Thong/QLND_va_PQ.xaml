<Window x:Class="BTL_Nhom6.Quan_Tri_He_Thong.QLND_va_PQ"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:BTL_Nhom6.UserControls"
        mc:Ignorable="d"
        Title="Quản lý Người dùng" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Resources>
        <!-- Style Header của Bảng -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Style Toggle Switch IOS -->
        <Style x:Key="IOSSwitchStyle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Width="44" Height="24">
                            <Border x:Name="Track" Background="{StaticResource BorderLightBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderMediumBrush}" BorderThickness="1"/>
                            <Border x:Name="Thumb" Width="20" Height="20" Background="White" CornerRadius="10" HorizontalAlignment="Left" Margin="2,0" Effect="{StaticResource MaterialDesignShadowDepth1}">
                                <Border.RenderTransform>
                                    <TranslateTransform X="0" Y="0"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{StaticResource SuccessGreenBrush}"/>
                                <Setter TargetName="Track" Property="BorderThickness" Value="0"/>
                            </Trigger>
                            <EventTrigger RoutedEvent="Checked">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Thumb" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="20" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Unchecked">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Thumb" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- SỬ DỤNG CẤU TRÚC GRID TRỰC TIẾP ĐỂ TRÁNH LỖI NAMESPACE -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <!-- Cột Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Cột Content -->
        </Grid.ColumnDefinitions>

        <!-- 1. SIDEBAR -->
        <uc:SidebarMenu Grid.Column="0" CurrentItem="System"/>

        <!-- 2. CONTENT AREA -->
        <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header Title -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs -->
                <RowDefinition Height="*"/>
                <!-- Main Body -->
            </Grid.RowDefinitions>

            <!-- 2.1. Title & Window Controls -->
            <Grid Grid.Row="0">
                <TextBlock Text="Quản trị hệ thống" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="32,24,0,10" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <uc:WindowControlBar />
            </Grid>

            <!-- 2.2. Tabs Navigation -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Margin="32,0,32,24">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Quản lý Người dùng &amp; Phân quyền" Style="{StaticResource ActiveTabButtonStyle}"/>
                    <Button Content="Quản lý Hồ sơ Kỹ năng" Style="{StaticResource TabButtonStyle}" Click="Button_QLHSKN_Click"/>
                    <Button Content="Thay đổi Mật khẩu &amp; Thông tin cá nhân" Style="{StaticResource TabButtonStyle}" Click="Button_TDMK_va_TTCN_Click"/>
                    <Button Content="Nhật ký &amp; Sao lưu dữ liệu" Style="{StaticResource TabButtonStyle}" Click="Button_NK_va_SLDL_Click" Margin="0"/>
                </StackPanel>
            </Border>

            <!-- 2.3. Filter & DataGrid -->
            <Grid Grid.Row="2" Margin="32,0,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filters -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Filter" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,16,0"/>
                        <ComboBox Width="140" Margin="0,0,16,0" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Vai trò" Background="White" Height="40" Padding="12,8">
                            <ComboBoxItem Content="Vai trò"/>
                            <ComboBoxItem Content="Quản trị viên"/>
                            <ComboBoxItem Content="Nhân viên"/>
                        </ComboBox>
                        <ComboBox Width="160" Margin="0,0,16,0" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Tên vai trò" Background="White" Height="40" Padding="12,8">
                            <ComboBoxItem Content="Tên vai trò"/>
                            <ComboBoxItem Content="Quản lý kỹ thuật"/>
                            <ComboBoxItem Content="Kỹ thuật viên điện"/>
                        </ComboBox>
                        <TextBox Width="260" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Tìm kiếm người dùng" materialDesign:TextFieldAssist.LeadingIcon="Search"
                                 Background="White" Height="40" VerticalContentAlignment="Center" Padding="8,0"/>
                    </StackPanel>

                    <Button Grid.Column="1" Background="{StaticResource PrimaryBlueBrush}" BorderBrush="{x:Null}" Height="40" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Foreground="White" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Thêm người dùng mới" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- DataGrid (Giờ đây dgUsers đã hợp lệ) -->
                <DataGrid Grid.Row="1" x:Name="dgUsers"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderLightBrush}"
                          Background="White"
                          BorderThickness="1"
                          BorderBrush="{StaticResource BorderLightBrush}"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          RowHeight="55"
                          FontSize="14"
                          VerticalScrollBarVisibility="Auto">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="12,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding Username}" Width="Auto" MinWidth="130"/>
                        <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="Tên vai trò" Binding="{Binding RoleName}" Width="Auto" MinWidth="160"/>
                        <DataGridTextColumn Header="Vai trò" Binding="{Binding RoleGroup}" Width="Auto" MinWidth="120"/>
                        <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="Auto" MinWidth="110"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                        <DataGridTextColumn Header="Mật khẩu" Binding="{Binding PasswordMask}" Width="Auto"/>

                        <DataGridTemplateColumn Header="Hành động" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}" Width="30" Height="30" Foreground="{StaticResource EditIconBrush}">
                                            <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18"/>
                                        </Button>
                                        <CheckBox IsChecked="{Binding IsActive}" Style="{StaticResource IOSSwitchStyle}" Margin="12,0"/>
                                        <Button Style="{StaticResource MaterialDesignIconButton}" Width="30" Height="30" Foreground="{StaticResource DeleteIconBrush}">
                                            <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>