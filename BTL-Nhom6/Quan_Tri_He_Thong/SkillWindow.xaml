<Window x:Class="BTL_Nhom6.SkillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thêm kỹ năng"
        Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{StaticResource ContentBackgroundBrush}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontSize="14"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowsTransparency="True">

    <Border CornerRadius="12" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" Background="{StaticResource ContentBackgroundBrush}">
        <!-- Hiệu ứng bóng đổ giống form User -->
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Direction="270"/>
        </Border.Effect>

        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Form -->
                <RowDefinition Height="Auto"/>
                <!-- Actions -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="THÊM KỸ NĂNG" 
                           FontSize="22" FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBlueBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Nhập thông tin kỹ năng mới" 
                           FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- 2. FORM INPUT -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <!-- Tên kỹ năng -->
                <TextBox x:Name="txtSkillName"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Tên kỹ năng (*)"
                         Height="50" Margin="0,0,0,16"
                         VerticalContentAlignment="Center"/>

                <!-- Mô tả -->
                <!-- Cho phép mô tả dài hơn một chút -->
                <TextBox x:Name="txtDescription"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Mô tả kỹ năng"
                         Height="80" Margin="0,0,0,0"
                         TextWrapping="Wrap"
                         VerticalContentAlignment="Top"
                         Padding="12,12"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <!-- 3. ACTIONS BUTTONS -->
            <Grid Grid.Row="2" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Hủy bỏ" IsCancel="True" Click="BtnCancel_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        BorderBrush="{StaticResource BorderMediumBrush}"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        Height="45"/>

                <Button Grid.Column="2" x:Name="btnSave" Content="LƯU LẠI" Click="BtnSave_Click"
                        Background="{StaticResource PrimaryBlueBrush}"
                        BorderBrush="{StaticResource PrimaryBlueBrush}"
                        Foreground="White"
                        Height="45"
                        FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Border>
</Window>